<div>
  <button disabled="disabled" id="select_all_button" onclick="$('.item.search-item:visible').find('input').attr('checked', true); return false;">
     Click to select all
  </button>
</div>

<div class="catalog-federator-list">
  <%- @datasets.each_with_index do |dataset, index| -%>
    <div class="item search-item">
      <div class="edit-item">
        <%= check_box_tag(
          'server[assets][]',
          index,
          dataset['selected'],
          :class => ['is-disabled', dataset['importable'] ? 'importable' : 'unimportable'],
          :id => "server_assets_#{index}",
          :disabled => 'disabled'
        ) %>
        <span class="asset-name">
          <label for="<%= "server_assets_#{index}" %>" title="<%= dataset['externalId'] %>">
            <%= truncate(dataset['name'], length: 120) %>
          </label>
        </span>
      </div>
    </div>
  <%- end -%>
</div>
