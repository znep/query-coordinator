/*** GENERAL ***/

a {
    color: #<%= th.link_fg %>;
}

<% 5.times do |level| %>
h<%= level + 1 %>  {
    color: #<%= th.header_fg[level] || '333333' %>;
}
<% end %>


/*** OUTER CHROME ***/

#header {
    border-top-color: #<%= th.top_border_bg %>;
}

#mainNav li a span,
#mainNav li.discover,
#mainNav li.home
{
    background-image: <%= main_button_inactive_bg %>;
}

body.home #mainNav li.home,
body.home #mainNav li.home a span,
body.discover #mainNav li.discover a span,
body.community #mainNav li.community a span,
body.discover #mainNav li.discover
{
    background-image: <%= main_button_active_bg %>;
}

#mainLogo a
{
    background-image: <%= th.image :logo %>;
}


/*** CAROUSEL ***/

.pageBlockHeaderCarousel.carouselWrapper,
.pageBlockHeaderCarousel .carouselOuter,
.pageBlockHeaderCarousel .carouselInner
{
    background-image: <%= carousel_bg %>;
}

/*** META TABS ***/
.infoContentOuter.listContainer.expanded .infoContentInner,
.infoContentOuter.listContainer .infoContent
{
    background-image: <%= expanded_list_bg %>;
}

.infoContentOuter
{
    border-color: #<%= th.highlight_color %>;
}

.metadataPane .summaryTabs 
{
    border-bottom: 1px solid #<%= th.highlight_color %>;
}

.metadataPane .summaryTabs li 
{
    border: 1px solid #<%= th.highlight_color %>;
}

.singleInfoComments li.comment.ownerComment .commentBlock .cornerOuter { 
    border: 1px solid #<%= th.highlight_color %>;
}

.infoContentOuter.listContainer .infoContent
{
    background-image: <%= bottom_left_dark_bg %>;
}

.infoContentOuter .infoContentWrapper
{
    background-image: <%= summary_bottom_right_bg %>;
}

