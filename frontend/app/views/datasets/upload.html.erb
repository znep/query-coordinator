<%- content_for :head do -%>
  <%= rendered_stylesheet_tag 'dataset-upload' %>
<%- end -%>

<div class="contentBox">
  <h2>Upload a New Dataset</h2>

  <%= form_tag("/imports.txt?redirect=true&authenticity_token=#{CGI::escape(form_authenticity_token)}",
              :id => "importForm", :multipart => true, :class => 'commonForm') do %>
      <p class="errorMessage"></p>
      <p class="information">Please choose a file to import as a Socrata dataset. Supported formats are .csv, .tsv, .xml, .xls, and .xlsx.</p>

      <div class="line clearfix">
        <label for="import_file">File to import:</label>
        <div class="fileInput">
          <%= file_field_tag('import_file') %>
        </div>
      </div>

    <div class="submitButtons clearfix">
      <%= submit_tag('Upload', :class => 'button default') %>
      <a class="button" href="<%= profile_index_path %>">Cancel</a>
    </div>
  <% end %>
</div>
