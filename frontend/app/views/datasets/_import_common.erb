<div class="generalDetails">
  <h3><%= t("#{prefix}.options") %></h3>
  <h4><%= t("#{prefix}.transforms") %></h4>
  <ul class="columnTransformsList">
  </ul>
  <a href="#newTransform" class="button add newColumnTransformButton">
