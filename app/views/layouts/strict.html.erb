<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />

  <%= stylesheet_link_tag "common", "info-pane", "layout", "outer-chrome",
    "sidebar", "widgets", :cache => "cache/all" %>

  <script src="http://www.google.com/jsapi"></script>
  <script>
    // Load jQuery
    google.load("jquery", "1.3");
  </script>

  <%= javascript_include_tag "util/jquery.sizes.min",
    "util/jquery.dimensions.min",
    :cache => "cache/all" %>

  <%= yield :head %>

</head>

<body>

  <div id='header'>
    <div id='mainLogo'><a href='#'>blist</a></div>

    <ul id='mainNav'>
      <li><a href='#'>Home</a></li>
      <li><a href='#'>Discover</a></li>
      <li><a href='#'>Community</a></li>
    </ul>

    <ul class='notifications'>
      <li><a href='#'>1 new message</a></li>
      <!-- This is a hack, since IE7 doesn't support generated content,
      which would allow us to dynamically generate separators -->
      <li>/<li>
      <li><a href='#'>3 requests</a></li>
    </ul>

    <ul class='userNav'>
      <li><a href='#'>Help</a></li>
      <li><a href='#'>My Account</a></li>
      <li><a href='#'>Sign Out</a></li>
    </ul>
  </div>

  <%= yield :layout %>

  <div class='clearBoth'></div>

  <div id='footer'>
    <a class='homeLink' href='#'>blist</a>
    <ul>
      <li><a href='#'>Forums</a></li>
      <li><a href='#'>Blog</a></li>
      <li><a href='#'>About blist</a></li>
      <li><a href='#'>Terms of use</a></li>
      <li><a href='#'>Site map</a></li>
      <li><a href='#'>Contact us</a></li>
    </ul>
  </div>

</body>
</html>
