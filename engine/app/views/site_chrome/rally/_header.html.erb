<header id="site-chrome-header" class="<%= size %>" role="banner" template="rally">
  <div class="banner">
    <div class="rally-top">
      <div class="header-content">
        <%= header_logo %>
        <%= render 'site_chrome/searchbox', path: massage_url('/browse'), vanishing_search_button: true %>
      </div>
    </div>

    <div class="rally-bottom">
      <div class="header-content">
        <nav class="desktop">
          <div class="navbar-left">
            <%= navbar_links_div(:use_dropdown => true) %>
          </div>

          <div class="navbar-right">
            <div class="site-chrome-social-links">
              <%= render 'site_chrome/social_links' %>
            </div>

            <% if valid_social_links(get_site_chrome.general[:social_shares]).present? %>
              <%= divider %>
            <% end %>

            <% if show_language_switcher? %>
              <%= render 'site_chrome/language_switcher', :orientation => 'bottom' %>
            <% end %>

            <%= render 'site_chrome/user_actions' %>
          </div>
        </nav>

        <nav class="mobile">
          <a class="site-chrome-btn menu-toggle" href="#" onclick="mobileMenuToggle()">
            <span class="icon-hamburger"></span>
            <%= t('header.menu') %>
          </a>
        </nav>
      </div>
    </div>
  </div>
  <%= render 'site_chrome/mobile_menu' %>
</header>
