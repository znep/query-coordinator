<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Socrata's Styleguide" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,300italic,400italic,600italic,700italic' rel='stylesheet' type='text/css'>
  </head>

  <body class="<%= page_classes %>">
    <div class="responsive-navbar responsive-navbar-fixed">
      <a class="home" href="index.html">
        <img src="images/socrata.png" alt="Socrata">
        <span>Styleguide</span>
      </a>
      <div class="responsive-navbar-nav">
        <a href="https://github.com/socrata/styleguide" class="btn btn-default btn-inverse">View on Github</a>
        <button class="btn btn-default btn-inverse" data-menu-toggle="pagemap" data-toggle>Menu</button>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
