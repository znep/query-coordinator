<% content_for :head do %>
<%= rendered_stylesheet_tag 'internal' %>
<title>Internal Panel | <%= CurrentDomain.strings.site_title %></title>
<% end %>

<%= render :partial => 'left_nav' %>

<div class="contentBox withLeftNavigation">
  <div class='content'>

    <h1>Internal Panel Home</h1>
    <p>
      Choose from an item on the left
    </p>

    <h2>Go to:</h2>
    <ul>
      <li><%= link_to 'Current Organization', "/internal/orgs/#{CurrentDomain.organizationId}" %></li>
      <li><%= link_to 'Current Domain', show_domain_path(domain_id: CurrentDomain.cname) %></li>
    </ul>

    <p class="guidelink">
      New to the Internal Panel? Check out the guide: <%=
        link = 'https://docs.google.com/document/d/1Uk2FG_AovYyC9bQZ3yI0GaAkNboRrGo0AazfS_8TMZQ/edit'
        link_to link, link %>
    </p>
  </div>
</div>
