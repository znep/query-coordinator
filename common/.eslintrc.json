{
  "extends": "./karma_config/node_modules/eslint-base/.eslintrc-airbnb.json",
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "import",
    "mocha"
  ],
  "rules": {
    "react/no-danger": 0,
    "dot-notation": [
      1,
      {
        "allowKeywords": true,
        "allowPattern": "^[a-z]+(_[a-z]+)+$"
      }
    ],
    "mocha/no-exclusive-tests": "error"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "Promise": true
  }
}
