<% content_for :head do %>
  <%= rendered_stylesheet_tag 'administration-screen' %>
  <%= rendered_stylesheet_tag 'administration-home' %>
  <%= rendered_stylesheet_tag 'colorpicker' %>
  <title><%= t('screens.admin.new_story.title') %> | <%= get_site_title %></title>
<% end %>

<% content_for :skip_links do %>
  <%= link_to t('core.no_js'), '?no_js=true' %>
<% end %>

<%= render '/internal/left_nav' %>

<div class="contentBox withLeftNavigation editStory">
  <div class="adminHeader homemgmt">
    <span class="icon"></span>
    <h1><%= t('screens.admin.new_story.heading') %></h1>
    <%= form_tag({:action => 'create_story'}, :method => :post, :multipart => true, :class => 'commonForm') do -%>
      <%= render :partial => 'story_form' %>
    <%- end -%>
  </div>
</div>

<% content_for :js_footer do %>
  <%- unless params[:no_js].present? -%>
    <%= include_webpack_bundle 'open-data/admin-story.js' %>
  <%- end -%>
<% end %>
