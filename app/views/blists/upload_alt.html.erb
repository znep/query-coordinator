<% content_for :head do %>
  <%= stylesheet_link_tag "upload-alt-screen" %>
  <title><%= CurrentDomain.strings.site_title %></title>
<% end %>

<% dialog_content do %>
  <div class="header">
    <h1>Upload a file</h1>
  </div>

  <div class="mainContent">
    <% form_tag('/imports.txt?redirect=true', :id => "importForm", :multipart => true) do %>
      <div class="fieldContent clearfix">
        <p class="errorMessage"></p>
        <p class="instructions">Please choose a file to import as a Socrata dataset. Supported formats are .csv, .tsv, .xml, .xls, and .xlsx.</p>
        <fieldset class="last">
          <div class="fileInputContainer clearfix">
            <label for="import_file">File to import:</label>
            <div class="fileInput">
              <%= file_field_tag('import_file') %>
            </div>
          </div>
        </fieldset>
      </div>

      <div class="footer clearfix">
        <%= image_submit_tag('button_finish.png', :alt => 'Upload') %>
      </div>
    <% end %>
  </div>
<% end %>