<% content_for :head do %>
<%- if @admin_panel -%>
  <%= stylesheet_link_merged 'admin-shared' %>
  <%= stylesheet_link_merged 'blists-publish' %>
  <title>Administration Panel | <%= CurrentDomain.strings.site_title %></title>
<%- else -%>
  <%= stylesheet_link_merged 'blists-publish' %>
  <title>Publishing <%= @view.name %> | <%= CurrentDomain.strings.site_title %></title>
<%- end -%>
<% end %>

<%- if @admin_panel -%>
<div id="publishContent" class="oneColumnContainer tabContainer">
  <%= render :partial => 'admin/tabs', :locals => {:active => 'sdp'} %>
  <div class="fullPageContentContainer fullPageWithTabs">
    <div class="fullPageOuterContent">
      <div class="fullPageContent">
        <div class='outerContent'>
          <div class='contentTR'><div class='contentTL'></div></div>
          <div class='content' id='adminContent'>
            <div class="publishHeader clearfix">
              <%= render :partial => 'admin/refresh_theme_link' =%>
                <h3>Social Data Player Customizations</h3>
                
                <%- if flash[:notice] -%>
                  <p class='flashNotice'><%= flash[:notice] %></p>
                <%- end -%>
                
                <p class="explanation">
                  Use the controls at the bottom of this page to edit the look and 
                  function of this Social Data Player. You can edit an existing 
                  template or create a new one.
                </p>
                <p class="explanation">
                  You can also <%= link_to 'return to the template list', :action => 'sdp_index' %>
                  to view all of your templates.
                </p>
              </div>
<%- else -%>
<div id="publishContent" class="oneColumnContainer">
  <div class="fullPageContentContainer">
    <div class="fullPageOuterContent">
      <div class="fullPageContent">
        <div class="publishHeader clearfix">
          <div class="publishCodeWrapper">
            <div class="publishCode">
              <p>
                Embed Code:
                <span class="helpie" title="Paste this HTML code on your blog or website to publish your Social Data Player">?</span>
              </p>
              <textarea><%= get_publish_embed_code_for_view(@view, @customization[:publish], @widget_customization.uid) %></textarea>
              <%= hidden_field_tag('codeTemplate', get_publish_embed_code_for_view(@view, 
                    { :dimensions => { :width => '%width%', :height => '%height%' } }, '%variation%')) %>
            </div>
          </div>
          <a href="<%= @view.href %>" class="backToDatasetLink">Back to the Dataset</a>
          <h1>Customize Your Social Data Player</h1>
          <p>
            Use the controls at the bottom of this page to edit the look and
            function of this Social Data Player. You can edit an existing
            template or create a new one.
          </p>
          <p>
            Grab the embed code when things look right.
          </p>
        </div>
<%- end -%>
        <div class="unsavedChangesBar">
          <ul class="actionButtons clearfix">
            <li>
              <a class="discardChangesButton" title="Discard your unsaved changes" href="#discard">
                Discard
              </a>
            </li>
            <li>
              <a class="saveChangesButton arrowButton" title="Save the changes and apply them to existing players using this template" href="#save">
                Save
              </a>
            </li>
          </ul>
          <p>You have unsaved changes to this template.</p>
        </div>
      <%- if @view.is_public? -%>
        <p class="livePreviewText">Live Preview</p>
        <div class="previewPane" style="width:<%= @customization[:publish][:dimensions][:width] %>px">
          <%= get_publish_embed_code_for_view(@view, {}, 'default') %>
          <div class="loadingIndicator">
            Loading your Data Player Customization...
          </div>
        </div>
      <%- else -%>
        <div class="errorMessage privateDatasetMessage">
          <h2>Warning</h2>
          <p>The dataset you are trying to publish is currently marked as private.
             You will need to make it public before you can publish it. This will
             mean that anyone can view the data.</p>
          <ul class="actionButtons">
            <li><a href="#public" class="makePublicButton arrowButton">Make it public</a></li>
          </ul>
        </div>
      <%- end -%>
      <div class="errorMessage versionMessage">
        <h2>Warning</h2>
        <p>The customization you are trying to edit is our old design, which is no
           longer supported. It will continue to work as expected, but if you want
           to make changes, you'll have to convert it over to our new design first.
           You can preview how it will look before committing to using it.</p>
        <ul class="actionButtons">
          <li><a href="#convert" class="convertButton arrowButton">Convert it now</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div id="publishOptionsPane" class="metadataPane">
  <div class="header">
    <ul class="summaryTabs clearfix">
      <%- unless @hide_template_select -%>
      <li id="tabTemplates">
        <%= summary_tab 'Templates', 'templates' %>
      </li>
      <%- end -%>
      <li id="tabVisual">
        <%= summary_tab 'Visual Options', 'visual' %>
      </li>
      <li id="tabMenuControl">
        <%= summary_tab 'Menu &amp; Control Options', 'menuControl' %>
      </li>
      <li id="tabAdvanced">
        <%= summary_tab 'Advanced Options', 'advanced' %>
      </li>
    </ul>
  </div>
  <% form_tag("/widget_customization/") do %>
  <%- if @hide_template_select -%>
    <%= hidden_field_tag("template_name", @widget_customization.uid) %>
  <%- else %>
    <div class="infoContentOuter singleInfoTemplates listContainer">
      <div class="infoContentHeader clearfix">
        <h2 class="panelHeader clipText">
            Apply the
            <%= select_tag("template_name", options_from_collection_for_select(
                @widget_customizations, 'uid', 'name', @widget_customization.uid)) %>
            template to this Social Data Player
        </h2>
        <ul class="headerActions actionButtons">
          <li class="noButton">
            or
          </li>
          <li>
            <a class="arrowButton newTemplate" title="Apply a New Template to this Player" href="/customization/new" rel="modal">
              Create a New Template
            </a>
          </li>
        </ul>
      </div>
      <div class="infoContentInner">
        <div class="infoContentWrapper">
          <div class="infoContent">
            <dl class="summaryList">
              <dt>Template Description</dt>
              <dd>
                <div class="itemContent">
                  <span id="customizationDescription" class="textContent"><%= @customization[:description] || "(none)" %></span>
                </div>
              </dd>
            </dl>
          <%- if false -%>
            <dl class="summaryList">
              <dt>Players Using Template</dt>
              <dd>
                <div class="itemContent">
                  <ul class="textContent">
                    <li>http://whitehouse.gov/index.html</li>
                    <li>http://thinkprogess.org/2009/12/10/article.html</li>
                    <li>http://mediamatters.org/tv/recent</li>
                  </ul>
                </div>
              </dd>
            </dl>
          <%- end -%>
          </div>
        </div>
      </div>
      <div class="infoContentBR"><div class="infoContentBL"></div></div>
    </div>
    <%- end -%>
    <div class="infoContentOuter singleInfoVisual listContainer">
      <div class="infoContentHeader clearfix">
        <h2 class="panelHeader clipText">
            Editing the <span class="templateName"><%= @widget_customization.name %></span> template
        </h2>
        <%- unless @hide_template_select -%>
          <a href="#changeTemplate" class="changeTemplateLink">Change &rsaquo;</a>
        <%- end -%>
        <ul class="headerActions actionButtons">
          <li>
            <a class="arrowButton submitLink" href="<%= @done_href %>">Done</a>
          </li>
        </ul>
        <p class="changesWarning">
          All changes to this template will affect each Data Player that uses it.
          <a href="/customization/new" rel="modal" class="newTemplateLink">New Template &rsaquo;</a>
