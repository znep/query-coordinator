{
  "env": {
    "es6": true
  },
  "extends": "../../../node_modules/eslint-base/.eslintrc.json",
  "rules": {
    "dot-location": [ 2, "property" ],
    "dot-notation": ["error", {"allowKeywords": true, "allowPattern": "^[a-z]+(_[a-z]+)+$"}],
    "import/default": "off",
    "new-cap": "off",
    "no-shadow": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "settings": {
    "import/ignore": [
      "\\.(scss|css)$"
    ]
  }
}

