<% content_for :head do %>
  <%= rendered_stylesheet_tag 'administration-screen' %>
  <%= rendered_stylesheet_tag 'administration-home' %>
  <%= include_stylesheets 'colorpicker' %>
  <title><%= @story.headline %> | Edit Home Page Story | <%= CurrentDomain.strings.site_title %></title>
<% end %>

<% content_for :skip_links do %>
  <a href="?no_js=true">Disable Javascript on this page</a>
<% end %>

<%= render :partial => 'left_nav' %>

<div class="contentBox withLeftNavigation editStory">
  <div class="adminHeader homemgmt">
    <span class="icon"></span>
    <h1>Edit Story Content</h1>
    <%- form_tag '', :method => :post, :multipart => true, :class => 'commonForm' do -%>
      <%= render :partial => 'story_form' %>
    <%- end -%>
  </div>
</div>

<% content_for :js_footer do %>
  <%- unless params[:no_js].present? -%>
    <%= include_javascripts 'admin-story' %>
  <%- end -%>
<% end %>
