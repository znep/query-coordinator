<%- prefix = 'screens.admin.federation' %>
<% content_for :head do %>
  <%= rendered_stylesheet_tag 'administration-screen' %>
  <%= rendered_stylesheet_tag 'administration-federation' %>
  <title><%= t("#{prefix}.title") %> | <%= CurrentDomain.strings.site_title %></title>
<% end %>

<%= render :partial => 'left_nav' %>

<div id="federationContent" class="contentBox withLeftNavigation">
  <div class="adminHeader federation">
    <span class="icon"></span>
    <h1><%= t("#{prefix}.title") %></h1>
  </div>

  <%= display_standard_flashes %>

  <div class="searchFields">
    <form class="search domainsSearch" method="get">
      <label for="domain"><%= t("#{prefix}.search_prompt") %></label>
      <input type="text" class="textPrompt searchField" name="domain" id="domain"
        title="<%= t("#{prefix}.search_prompt") %>"<%= raw(" value=\"#{h @search_domain}\"") unless @search_domain.nil? %> />
      <input type="submit" class="submit" alt="<%= t("#{prefix}.search") %>" value="<%= t("#{prefix}.search") %>" />
    </form>

    <%# We don't have a UI for federating individual datasets yet, so this is less than helpful %>
    <%- if false -%>
      <form class="search datasetsSearch" method="get">
        <label for="dataset"><%= t("#{prefix}.search_pub_datasets") %></label>
        <input type="text" class="textPrompt searchField" name="dataset" id="dataset"
         title="<%= t("#{prefix}.search_pub_datasets") %>"<%= raw(" value=\"#{h @search_dataset}\"") unless @search_dataset.nil? %> />
        <input type="submit" class="submit" alt="<%= t("#{prefix}.search") %>" value="<%= t("#{prefix}.search") %>" />
      </form>
    <%- end -%>
  </div>

  <%- if (!@search_domain.blank?) && @domains.blank? -%>
    <p class="noAvailableTargets"><%= t("#{prefix}.no_domains", :name => @search_domain) %></p>
  <%- end -%>

  <%- unless @domains.blank? -%>
   <div class="availableTargetDomains">
     <p class="explanation"><%= t("#{prefix}.list_domains") %></p>
     <%- @domains.each do |d| -%>
      <%= form_tag({:action => 'create_federation'}, {:method => 'post', :class => 'newFederationForm'}) do %>
        <label class="domain"><%= d.cname %></label>
        <%= hidden_field_tag('new_federation[target_domain]', d.cname) %>
        <label for="search_boost" class="boost" ><%= t("#{prefix}.search_boost") %>:</label><%= text_field_tag('new_federation[search_boost]', '0.8', :title => t("#{prefix}.search_boost_explain")) %>
        <%= submit_tag t("#{prefix}.publish"), :class => 'button' %>
      <% end %>
     <%- end -%>
   </div>
  <%- end -%>

  <%- unless @federations.blank? -%>
    <div class="gridListWrapper">
      <table class="gridList federationList" cellspacing="0">
        <colgroup>
          <col class="source" />
          <col class="target" />
          <col class="dataset" />
          <col class="boost" />
          <col class="acceptedBy" />
          <col class="status" />
          <col class="delete" />
        </colgroup>
        <thead>
          <tr>
            <th class="source" scope="col"><div><%= t("#{prefix}.source_domain") %></div><span class="icon"></span></th>
            <th class="target" scope="col"><div><%= t("#{prefix}.target_domain") %></div><span class="icon"></span></th>
            <th class="dataset" scope="col"><div><%= t("#{prefix}.dataset") %></div><span class="icon"></span></th>
            <th class="boost" scope="col"><div><%= t("#{prefix}.search_boost") %></div><span class="icon"></span></th>
            <th class="acceptedBy" scope="col"><div><%= t("#{prefix}.accepted_by") %></div><span class="icon"></span></th>
            <th class="status" scope="col"><div><%= t("#{prefix}.status") %></div><span class="icon"></span></th>
            <th class="delete" scope="col"><div><%= t("#{prefix}.terminate") %></div><span class="icon"></span></th>
          </tr>
        </thead>
        <tbody>
          <%- @federations.each do |f| -%>
            <tr class="item">
              <td class="source" scope="row">
                <span class="cellInner"><%= f.sourceDomainCName %></span>
              </td>
              <td class="target">
                <span class="cellInner"><%= f.targetDomainCName %></span>
              </td>
              <td class="dataset">
                <%- if f.lensId.nil? %>
                  <em><%= t("#{prefix}.all") %></em>
                <%- else -%>
                  <span class="cellInner"><%= f.lensName %></span>
                <%- end -%>
              </td>
              <td class="boost">
                <span class="cellInner"><%= f.searchBoost %></span>
              </td>
              <td class="acceptedBy">
                <%- if !f.acceptedUserId.nil?%>
                  <div class="cellInner"><%= f.acceptorScreenName %></div>
                <%- end -%>
              </td>
              <td class="status">
                <span class="loading"></span>
                <%- accepted = f.acceptedUserId.present? -%>
                <span class="cellInner"><%= t("#{prefix}.#{accepted ? 'accepted' : 'pending'}") %></span>
                <%- if f.targetDomainCName == CurrentDomain.cname %>
                  <div class="acceptRejectButtons">
                    <%= form_button({:action => :accept_federation, :id => f.id}, t("#{prefix}.accept"),
                         {}, {:class => 'button' + (accepted ? ' disabled' : '')}) %>
                    <%= form_button({:action => :reject_federation, :id => f.id}, t("#{prefix}.reject"),
                         {}, {:class => 'button' + (accepted ? '' : ' disabled')}) %>
                  </div>
                <%- end -%>
              </td>
              <td class="delete">
                <%= form_button({:action => :delete_federation, :id => f.id}, t("#{prefix}.terminate"),
                     {:method => :delete}) %>
              </td>
            </tr>
          <%- end -%>
        </tbody>

      </table>
    </div>
  <%- else -%>
    <p class="noFederations">
      <%- if @search_dataset.present? -%>
        <%= t("#{prefix}.no_pub_datasets") %>
      <%- else -%>
        <%= t("#{prefix}.no_federations") %>
      <%- end -%>
    </p>
  <%- end -%>


</div>

<%= admin_user_zoom %>

<%- content_for :js_footer do -%>
  <%- unless params[:no_js].present? -%>

  <%= include_javascripts 'admin-federation' %>
  <%- end -%>
<%- end -%>
