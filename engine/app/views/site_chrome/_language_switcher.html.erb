<div class="language-switcher-container">
  <div class="language-switcher noselect">
    <% icon_arrow_class = orientation == 'bottom' ? 'socrata-icon-arrow-down' : 'socrata-icon-arrow-up' %>
    <%= dropdown(
      (locale_full_name(I18n.locale) << content_tag(:span, nil, :class => icon_arrow_class)).html_safe,
      language_switcher_options,
      orientation
    ) %>
  </div>
</div>
