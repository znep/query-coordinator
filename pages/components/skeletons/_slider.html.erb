<div id="slider-container"></div>

<script type="text/babel" data-presets="es2015,react">
  $(() => {
    let value = 10;

    const props = {
      rangeMin: 0,
      rangeMax: 20,
      step: 2,
      value,
      onChange: (newValue) => {
        props.value = newValue;
        render();
      }
    };

    function render() {
      ReactDOM.render(
        <styleguide.Slider {...props} />,
        document.getElementById('slider-container')
      );
    }

    render();
  });
</script>
