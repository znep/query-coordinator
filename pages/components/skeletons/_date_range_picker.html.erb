<div id="date-range-picker-container"></div>

<script type="text/babel" data-presets="es2015,react">
  $(() => {

    const props = {
      value: {
        start: '2014-06-10T00:00:00',
        end: '2016-06-06T00:00:00'
      },
      onChange: (newValue) => {
        props.value = newValue;
        render();
      }
    };

    function render() {
      ReactDOM.render(
        <styleguide.DateRangePicker {...props} />,
        document.getElementById('date-range-picker-container')
      );
    }

    render();
  });
</script>
