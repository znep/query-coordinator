<% begin %>
  <% if using_custom_header_footer? %>
    <%= render 'custom_content/custom',
      :section => 'header',
      :content => site_chrome_custom_header_footer_content[:header],
      :size => local_assigns[:size] %>
  <% else %>
    <%= render "site_chrome/#{current_template}/header", :size => local_assigns[:size] %>
  <% end %>

  <%= render 'site_chrome/preview_mode_warning' if site_chrome_preview_mode? %>
<% rescue StandardError, SyntaxError => e
  error_msg = "Site Chrome error parsing configuration: #{e.inspect}\n#{e.backtrace}"
  Rails.logger.debug(error_msg)
  ::Airbrake.notify(
    :error_class => 'InvalidSiteChromeConfiguration',
    :error_message => error_msg
  )
  error_msg
end %>
