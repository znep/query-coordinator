        "blockContent": {
          "layout": "12",
          "components": [
            {
              "type": "html",
              "value": "<%=
              [
                "<h1>#{I18n.t('inspiration_blocks.text_block.heading')}</h1>",
                "<div><i>#{I18n.t('inspiration_blocks.generic_intro_sentence')}</i> ",
                "#{I18n.t('inspiration_blocks.text_block.content')}",
