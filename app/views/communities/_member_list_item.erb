<%- member = member_list_item -%>
<% cache ["community-member-list-item", member_list_item.id], :expires_in => 15.minutes do %>

<li class="memberListItem clearfix">
  <div class="memberImage">
    <%= link_to(
          image_tag(member.profile_image_path("medium"), :size => "65x65",
          :alt => h(member.displayName)), member.href) %>
  </div>
  <div class="memberInfo">
    <h3 class="clipText"><%= link_to(member.displayName, member.href, :title => member.displayName) %></h3>
    <ul>
      <li><%= member.displayLocation %></li>
      <li><%= member.company %></li>
      <li><%= member.title %></li>
    </ul>
  </div>
  <div class="memberRight">
    <div class="memberMeta">
      <ul>
        <li><strong>Tags:</strong> <%= member.tag_display_string %></li>
        <li><strong>Interests:</strong> <%= member.interests %></li>
      </ul>
    </div>
    <div class="memberData">
      <ul class="memberStats clearfix">
        <li>Friends <strong><%= member.numberOfFriends %></strong></li>
        <li>Followers <strong><%= member.numberOfFollowers %></strong></li>
        <li>Public <%= t(:blists_name) %> <strong><%= member.publicTables %></strong></li>
        <li>Rank <strong><%= member.displayScore %></strong></li>
      </ul>
<% end %>
      <ul class="memberActions actionButtons clearfix">
        <%- if (!@current_user.nil? && @current_user.id != member.id && @current_user.privacyControl != 'anonymousPerson') -%>
          <li>
            <%- if (member.my_friend?) -%>
              <a href="<%= delete_friend_profile_path(member.id) %>"
                  class="followAction" title="Remove as Friend"><span>Remove</span></a>
            <%- else -%>
              <a href="<%= create_friend_profile_path(member.id) %>"
                  class="followAction" title="Add Friend"><span>Add Friend</span></a>
            <%- end -%>
          </li>
        <%- end -%>
        <li class="last">
          <a href="<%= member.href %>" class="arrowButton"><span>Profile</span></a>
        </li>
      </ul>
    </div>
  </div>
</li>
