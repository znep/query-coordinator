<%- unless opts[:disable][:search] -%>

  <div id="browse2-search-container">
    <form class="browse2-search">
      <span class="browse2-search-icon icon-search"></span>
      <input class="browse2-search-control searchBox" type="text" name="browseSearch" value="<%= opts[:q] %>" title="<%= t('controls.browse.browse2.search.title') %>" placeholder="<%= t('controls.browse.browse2.search.placeholder') %>" />
      <span class="browse2-search-mobile-search-button">
        <span class="icon-search"></span>
      </span>
      <%- if clear_search_url.present? -%>
        <a class="browse2-clear-search-icon icon-close-2" href="<%= clear_search_url %>" title="<%= t('controls.browse.browse2.search.clear.title') %>"></a>
      <%- end -%>
    </form>
  </div>

  <%- if FeatureFlags.derive(@view, request).browse_autocomplete -%>
    <%= include_webpack_bundle 'autocomplete/main.js' %>

    <script>
      window.autocomplete('#browse2-search-container', { query: '<%= opts[:q] %>' });
    </script>
  <% end %>

<%- end -%>
