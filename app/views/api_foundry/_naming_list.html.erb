<% content_for :morsel_nav do %>
  <li>Names and Descriptions</li>
<% end %>

<a name="naming"></a>
<h2 class="title center">Names and Descriptions: <strong><%= @view.name -%></strong></h2>
<p><a href="rename/">Rename this API</a></p>
<div id="names" class="managesection">
  <ul class="flowlist">
    <% @view.columns.each do |column| %>
      <li>
        <a href="<%= "naming/" + column.fieldName %>">
          <span class="apiicon ico-names-descriptions"> </span>
          <span class="colsummary">
            <p class="colname"><%= column.name %></p>
            <p class="desc"><%= truncate(column.description, :length => 115, :omission => "...") %></p>
          </span>
        </a>
      </li>
    <% end %>
  </ul>
</div>
