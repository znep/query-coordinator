<% content_for :head do %>
  <%= rendered_stylesheet_tag 'internal' %>
  <title>Internal Panel | <%= get_site_title %></title>
<% end %>

<%= render 'left_nav' %>

<div class="contentBox withLeftNavigation">
  <div class='content'>

    <h1>Internal Panel Home</h1>
    <p>
      Choose from an item on the left
    </p>

    <h2>Go to:</h2>
    <ul>
      <li><%= link_to 'Current Organization', "/internal/orgs/#{CurrentDomain.organizationId}" %></li>
      <li><%= link_to 'Current Domain', show_domain_path(domain_id: CurrentDomain.cname) %></li>
    </ul>

    <p class="guidelink">
      New to the Internal Panel? Check out the guide:
      <a href="https://docs.google.com/document/d/1Uk2FG_AovYyC9bQZ3yI0GaAkNboRrGo0AazfS_8TMZQ/edit">
        All About the Internal Panel
      </a>
    </p>

    <h2>Tools:</h2>
    <ul>
      <li>I need to <%= link_to 'undelete a user', find_deleted_user_path %>.</li>
    </ul>
  </div>
</div>
