<div class="tile-container theme-<%= @story.theme %>">
  <div class="tile typeset">

    <h1 class="tile-title"><%= core_attributes['name'] || t('default_page_title') %></h1>

    <% if @story.block_images.first.present? %>
      <div class="tile-image" style="background-image: url('<%= @story.block_images.first %>');'"></div>
    <% else %>
      <div class="tile-image"></div>
    <% end %>

    <% if core_attributes['description'].present? %>
      <p class="tile-description"><%= core_attributes['description'] %></p>
    <% else %>
      <p class="tile-no-description"><%= t('tile.no_description_label') %></p>
    <% end %>

    <div class="tile-link-container">
      <p class="tile-link">
        <%= t('tile.read_more_prompt') %>
        <a
          href="<%= story_url(uid: @story.uid) %>"
          title="<%= "#{t('tile.read_more_prompt')}#{story_url(uid: @story.uid)}" %>"
          target="_blank">
          <%= story_url(uid: @story.uid) %>
        </a>
      </p>
    </div>

    <div class="tile-loading">
      <div class="tile-loading-spinner"></div>
    </div>

  </div>
</div>
