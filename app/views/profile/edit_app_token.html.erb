<% content_for :head do %>
  <%= rendered_stylesheet_tag 'profile-edit' %>
  <title>Edit Application Token | <%= CurrentDomain.strings.site_title %></title>
<% end %>

<% content_for :skip_links do %>
  <%- unless params[:no_js].present? -%>
    <%= link_to 'Disable Javascript on this page', '?no_js=true' %>
  <%- end -%>
<% end %>

<%= render :partial => 'edit_nav' %>

<div class="contentBox withLeftNavigation editProfile editAppToken">
  <% link_to({:action => :edit_app_tokens}, :class => 'button backButton leftArrowNoHover') do %>
    <span class="icon"></span>
    All Application Tokens
  <% end %>
  <div class="content">
    <div class="editAppTokenForm editForm">
      <h1>Edit Application Token</h1>
      <%= display_standard_flashes %>
      <div class="editToken editArea">
        <%= render :partial => 'edit_app_tokens_form' %>
      </div>
    </div>
    <%- unless params[:no_js].present? -%>
      <%= render :partial => 'edit_account_form' %>
      <% form_tag(current_user.href, :id => "editProfileForm", :class => 'commonForm', :method => :put) do %>
      <%= render :partial => 'edit_form' %>
      <%= render :partial => 'edit_image_form' %>
      <%- end -%>
    <%- end -%>
  </div>
</div>

<% content_for :js_footer do %>
  <%- unless params[:no_js].present? -%>
    <%= include_javascripts 'screen-profile-edit' %>
  <%- end -%>
<% end %>
