<% content_for :head do %>
  <%= stylesheet_link_tag "home-screen",
    :cache => "cache/all" %>
  <title>blist | share your weblists</title>
<% end %>



<div class="twoColumnContainer clearfix">
  <div id="mainColumnContent" class="column mainContent">
    <div id='home'>
      <%= render(:partial => "shared/tabs") %>
      <div class='outerContent'>
        <div class='contentHighlight'>
          <div class='content'>
            <h1>Welcome back <%= @cur_user.is_established? ? h(@cur_user.login) : h(@cur_user.firstName) %></h1>
            
            <ul class="actionButtons clearfix">
              <li><a href="#" class="arrowButton">New blist</a></li>
              <li><a href="#">Import from Excel</a></li>
              <li><a href="#">Browse blists</a></li>
              <li class="last"><a href="#">Invite Others</a></li>
            </ul>
            
            <%- if (!@cur_user.is_established?) -%>
              <%= render(:partial => "shared/feature_boxes") %>
            <%- end -%>
            
            <div class="activityListContainer">
              <h2>Recently Opened blists</h2>
              <ul>
                <li>
                  <p><a href="#" title="This is the blist">Wines of Napa</a></p>
                  <p class="preview">This is the description text. And more...</p>
                </li>
                <li>
                  <p><a href="#" title="Expenses">Expenses</a></p>
                  <p class="preview">This is the description text. And more...</p>
                </li>
              </ul>
              <p class="listAction"><a href="#act">View All</a></p>
            </div>
            
            <div class="activityListContainer">
              <h2>Favorite blists</h2>
              <ul class="favoriteList">
                <li>
                  <p><a href="#" title="This is the blist">Wines of Napa</a></p>
                  <p class="preview">This is the description text. And more...</p>
                </li>
                <li>
                  <p><a href="#" title="Expenses">Expenses</a></p>
                  <p class="preview">This is the description text. And more...</p>
                </li>
              </ul>
              <p class="listAction"><a href="#act">View All</a></p>
            </div>
            
            <div class="activityListContainer">
              <h2>Contacts Updates</h2>
              <ul class="contactList">
                <li>
                  <p class="contact">
                    <a href="#"><%= image_tag("small-profile.png", :size => "24x24", :alt => "Chris Metcalf") %></a>
                    <a href="#" title="Chris Metcalf">Chris Metcalf</a>
                  </p>
                  <p class="preview">Did something or other to the blist <%= link_to("Wines of Napa", "#") %></p>
                </li>
                <li>
                  <p class="contact">
                    <a href="#"><%= image_tag("small-profile.png", :size => "24x24", :alt => "Jimmy John") %></a>
                    <a href="#" title="Expenses">Jimmy John</a>
                  </p>
                  <p class="preview">Did something or other</p>
                </li>
              </ul>
              <p class="listAction"><a href="#act">View All</a></p>
            </div>
            
            <div class="activityListContainer">
              <h2>From the Blog</h2>
              <ul>
                <li>
                  <p><a href="#" title="This is the blist">Join us at Degrag 2008</a></p>
                  <p class="preview">November 2, Kevin Merritt</p>
                </li>
                <li>
                  <p><a href="#" title="Expenses">Yesterday, Today and Tomorrow in blist</a></p>
                  <p class="preview">November 2, Kevin Merritt</p>
                </li>
                <li>
                  <p><a href="#" title="Expenses">What is a lens? How do I make one?</a></p>
                  <p class="preview">November 2, Kevin Merritt</p>
                </li>
              </ul>
              <p class="listAction"><a href="#act">View All</a></p>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="sidebar" class="column">
    <% render(:layout => "shared/sidebar_box") do %>
      <%= render(:partial => "shared/current_user_tile", :locals => { :user => @cur_user }) %>
    <% end %>

    <%- # only show updates if the user has > 3 total blists -%>
    <%- if (@cur_user.is_established?) -%>
      <% render(:layout => "shared/sidebar_box",
        :locals => { :content_class => 'userUpdates' } ) do %>
        <%= render(:partial => "shared/user_updates", :locals => { :user => @cur_user }) %>
      <% end %>
    <%- end -%>
    
    <%- # Storage space used is not yet applicable -%>
    <%- if false -%>
      <% render(:layout => "shared/sidebar_box") do %>
        <h4>Storage</h4>
        <p>You are using 50% of your available storage</p>
      <% end %>
    <%- end -%>

    <%= render(:partial => "shared/ad_box", :locals => { :last_child => true }) %>
  </div>
</div>

<% content_for :js_footer do %>
  <%= render(:partial => "shared/common_js") %>
<% end %>
