<% content_for :head do %>
  <%= stylesheet_link_tag "upload-alt-screen" %>
  <title>Email this <%= t(:blist_name) %> | <%= CurrentDomain.strings.site_title %></title>
<% end %>

<% dialog_content do %>
  <div class="header">
    <h1>Email this <%= t(:blist_name) %></h1>
  </div>

  <div class="mainContent">
    <% if !@bad_addresses.nil? && @bad_addresses.size <= 0 %>
      <p>Your emails were sent successfully. You can now return to <%= link_to @view.name, @view.alt_href %>.</p>
    <% elsif !@bad_addresses.nil? && @bad_addresses.size > 0 %>
      <p>Errors were encountered while sending your emails:<p>
      <ul>
        <% @bad_addresses.each do |email, error| %>
          <li><%= email %>: <%= error %></li>
        <% end %>
      </ul>
    <% else %>
      <% form_tag("#{@view.href}/email", :id => "emailForm", :multipart => false) do %>
        <div class="fieldContent clearfix">
          <p class="errorMessage"></p>
          <p class="instructions">
          Please enter the email address of the person that you'd like to send a copy of the
          <%= h(@view.name) %> <%= t(:blist_name) %>. You can enter a comma-separated list of
          email addresses to send the <%= t(:blist_name) %> to multiple people.
          </p>
          <fieldset class="last">
            <div class="emailInputContainer clearfix">
              <label for="emails">Email addresses:</label>
              <div class="emailInput">
                <%= text_field_tag('emails') %>
              </div>
            </div>
          </fieldset>
        </div>

        <div class="footer clearfix">
          <%= submit_tag('Send Email') %>
          <%= link_to "Back to #{@view.name}", @view.alt_href %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
