<%- 
  isActivityEnabled = false
-%>
<div class="header">
  <ul class="summaryTabs clearfix">
    <li id="tabSummary" class="summary active">
      <%= summary_tab('Summary', 'summary') %>
    </li>
    <li id="tabMembers">
      <%= summary_tab('Members', 'members') %>
    </li>
    <li id="tabShares">
      <%= summary_tab('Shares', 'shares') %>
    </li>
    <li id="tabBlists">
      <%= summary_tab('Public Datasets', 'publicBlists') %>
    </li>
<%- if isActivityEnabled -%>
    <li id="tabActivity" class="last">
      <%= summary_tab('Activity', 'activity') %>
    </li>
<%- end -%>
  </ul>
</div>


<%# *** START: SUMMARY *** %>
<div class="infoContentOuter singleInfoSummary listContainer active">
  <div class="infoContentHeader clearfix">
    <h2 class="panelHeader groupPanelHeader">
      <%= @group.name %>
    </h2>
  </div>
  <div class="infoContentInner">
    <div class="infoContent">

      <dl class="summaryList">
        <dt>
          Created On
        </dt>
        <dd>
          <div class="itemContent">
            <span><%= blist_date(@group.createdAt) %></span>
          </div>
        </dd>
      </dl>

      <dl class="summaryList actionList">
        <dt>
          Members
        </dt>
        <dd>
          <div class="itemContent">
            <span><%= pluralize(@group.users.length, "group member") %></span>
          </div>
          <div class="itemActions">
            <a href="#tabMembers" class="action tabLink members">
              <span>View</span>
            </a>
          </div>
        </dd>
      </dl>

      <dl class="summaryList actionList">
        <dt>
          Shares
        </dt>
        <dd>
          <div class="itemContent">
            <ul>
              <li>Members are contributors to <%= pluralize(@group_contributor_blists.length, "blist") %></li>
              <li>Viewers to <%= pluralize(@group_viewer_blists.length, "blist") %></li>
            </ul>
            </span>
          </div>
          <div class="itemActions">
            <a href="#tabShares" class="action tabLink shares">
              <span>View</span>
            </a>
          </div>
        </dd>
      </dl>

    </div> <!-- /.infoContent -->
  </div> <!-- /.infoContentInner -->
</div>
<%# *** END: SUMMARY *** %>

<%# *** START: MEMBERS *** %>
<div class="infoContentOuter singleInfoMembers">
  <div class="infoContentHeader clearfix">
    <h2 class="panelHeader contactPanelHeader">
      <%= pluralize(@group.users.length, "group member") %>
    </h2>
    <ul class="headerActions actionButtons">
      <li><a href="#add" class="arrowButton">[Add Groupmember]</a></li>
    </ul>
  </div>
  <div class="infoContentInner">
    <div class="infoContent">
      <div class="gridListContainer">
        <table class="gridList" cellspacing="0">
          <colgroup>
            <col class='picture' />
            <col class='name' />
            <col class='description' />
            <col class='dateAdded' />
            <col class='actionContainer' />
          </colgroup>
          <thead>
            <tr>
              <th class="picture" title="Picture"><div>Picture</div></th>
              <th class="name"><div>Name</div></th>
              <th class="description"><div>Description</div></th>
              <th class="dateAdded"><div>Date Added</div></th>
              <th class="actionContainer"></th>
            </tr>
          </thead>
          <tbody>
            <%- @group.users.each do |member| -%>
              <tr class="item">
                <td class="picture"><div>
                  <img src="<%= member.profile_image_path("small") %>" width="24" height="24"
                  alt="<%= member.displayName %>" />
                </div></td>
                <td class="name"><div class="clipText"><%= member.displayName %></div></td>
                <td class="description"><div class="clipText"><%= member.description %></div></td>
                <td class="dateAdded"><div>[10/18/2008]</div></td>
                <td class="actionContainer"><div><a
                      href="#remove" class="action"
                      title="Removve"><span>[Remove]</span></a>
                </div></td>
              </tr>
            <%- end -%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%# *** END: MEMBERS *** %>

<%# *** START: SHARES *** %>
<div class="infoContentOuter singleInfoShares">
  <div class="infoContentHeader clearfix">
    <h2 class="panelHeader typeSharedIn first"><%= @shares_by_group.length %> Shared to you</h2>
    <h2 class="panelHeader typeSharedOut"><%= @shares_to_group.length %> Shared to <%= @group.name %></h2>
  </div>
  <div class="infoContentInner">
    <div class="infoContent">
      <div class="gridListContainer">
        <table class="gridList" cellspacing="0">
          <colgroup>
            <col class='favorite' />
            <col class='type' />
            <col class='name' />
            <col class='description' />
            <col class='sharedOn' />
            <col class='actionContainer' />
          </colgroup>
          <thead>
            <tr>
              <th class="favorite" title="Favorite?"><div>Favorite?</div></th>
              <th class="type" title="Type"><div>Type</div></th>
              <th class="name"><div class="clipText">Name</div></th>
              <th class="description"><div class="clipText">Description</div></th>
              <th class="sharedOn"><div>Shared On</div></th>
              <th class="actionContainer last"></th>
            </tr>
          </thead>
          <tbody>
            <%- @group_shares.each do |share| -%>
              <tr class="item">
                <td class="favorite <%= share.flag?('favorite') %>"><div>
                    <span class="favoriteMarker"><%= share.flag?('favorite') ? "favorite" : "" %></span>
                </div></td>
                <td class="type"><div class="<%=
                  get_share_direction_icon_class_for_view(share) %>">
                  <%= get_type_string_for_view(share) %></div>
                </td>
                <td class="name"><div class="clipText">
                  <%= link_to(share.name, share.href) %>
                </div></td>
                <td class="description"><div class="clipText"><%= share.description %></div></td>
                <td class="sharedOn"><div>[10/18/2008]</div></td>
                <td class="actionContainer"><div><a
                      href="<%= share.href %>" class="action"
                      title="<%= share.name %>"><span>View</span></a>
                </div></td>
              </tr>
            <%- end -%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%# *** END: SHARES *** %>

<%# *** START: BLISTS *** %>
<div class="infoContentOuter singleInfoBlists">
  <div class="infoContentHeader clearfix">
    <h2 class="panelHeader typeBlist"><%= pluralize(@group_blists.length, "Public blist") %></h2>
  </div>
  <div class="infoContentInner">
    <div class="infoContent">
      <div class="gridListContainer">
        <table class="gridList" cellspacing="0">
          <colgroup>
            <col class='type' />
            <col class='name' />
            <col class='views' />
            <col class='copies' />
            <col class='lastUpdated' />
            <col class='actionContainer' />
          </colgroup>
          <thead>
            <tr>
              <th class="type" title="Type"><div>Type</div></th>
              <th class="name"><div>Name</div></th>
              <th class="views"><div>Views</div></th>
              <th class="copies"><div>Copies</div></th>
              <th class="lastUpdated"><div>Last Update</div></th>
              <th class="actionContainer last"></th>
            </tr>
          </thead>
          <tbody>
            <%- @group_blists.each do |blist| -%>
              <tr class="item">
                <td class="type"><div class="<%=
                  get_share_direction_icon_class_for_view(blist) %>">
                  <%= get_type_string_for_view(blist) %></div>
                </td>
                <td class="name"><div><%= link_to(blist.name, blist.href) %></div></td>
                <td class="views"><div><%= blist.viewCount %></div></td>
                <td class="copies"><div>[123]</div></td>
                <td class="lastUpdated"><div><%= blist_date(blist.last_activity) %>
                </div></td>
                <td class="actionContainer"><div><a
                      href="<%= blist.href %>" class="action"
                      title="<%= blist.name %>"><span>View</span></a>
                </div></td>
              </tr>
            <%- end -%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%# *** END: BLISTS *** %>
