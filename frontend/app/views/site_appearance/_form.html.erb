<%= form_tag update_site_appearance_path(id: @site_appearance.id), method: :put, class: :edit_site_chrome, id: "edit_site_chrome_#{@site_appearance.id}" do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <% if @site_appearance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site_appearance.errors.count, 'error') %> prohibited this site_chrome from being saved:</h2>

      <ul>
      <% @site_appearance.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2> Properties: <h2/>

  <ul>
    <% @site_appearance.properties.each do |property| %>
      <li>
        <%= label_tag 'site_chrome_' + property['name'] %>
        <%= text_area_tag "site_chrome[properties][#{property['name']}]", property['value'] %>
      </li>
      <br/>
    <% end %>
  </ul>

  <%= submit_tag 'Submit', data: { confirm: 'Are you sure?' } %>
<% end %>
