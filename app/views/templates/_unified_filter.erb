<div class="filterPane">
  <div class="initialFilterMode">
    <p><%= t 'controls.filter.main.tutorial_html' %></p>
    <p class="orText">or</p>
    <a href="#newCondition" class="addFilterConditionButton">
      <%= t 'controls.filter.actions.first_condition' %>
    </a>
  </div>
  <div class="normalFilterMode">
    <div class="menu advanced filterOptionsMenu mainFilterOptionsMenu"></div>

    <div class="advancedStateLine notAdvancedLine">
      <span class="advancedStateText"><%= t 'controls.filter.main.simplified_message' %></span>
      <a class="advancedStateLink advancedOnLink" href="#advanced">
        <%= t 'controls.filter.main.simplified_toggle' %>
      </a>
    </div>
    <div class="advancedStateLine editModeAdvancedOffLine">
      <span class="advancedStateText"><%= t 'controls.filter.edit_default.simplified_header' %></span>
      <%= t 'controls.filter.edit_default.simplified_body' %>
      <a class="advancedStateLink advancedOnLink" href="#advanced">
        <%= t 'controls.filter.edit_default.simplified_toggle' %>
      </a>
    </div>
    <div class="advancedStateLine editModeAdvancedOnLine">
      <span class="advancedStateText"><%= t 'controls.filter.edit_default.advanced_header' %></span>
      <%= t 'controls.filter.edit_default.advanced_body' %>
      <a class="advancedStateLink advancedOffLink" href="#notAdvanced">
        <%= t 'controls.filter.edit_default.advanced_toggle' %>
      </a>
    </div>

    <div class="filterConditions">
      <div class="noFilterConditionsText"><%= t 'controls.filter.main.no_conditions' %></div>
    </div>

    <a class="button add advanced addFilterConditionButton">
      <span class="icon"></span>
      <%= t 'controls.filter.actions.new_condition_button' %>
    </a>
  </div>

  <%- if @view.present? && @view.has_rights?('update_view') -%>
    <div class="editFilterBlock">
      <div class="normalModeMessage">
        <p><%= t 'controls.filter.edit_default.mode_message' %></p>
        <a class="editFilter button" href="#edit"><%= t 'controls.filter.edit_default.mode_button' %></a>
      </div>
      <div class="editModeMessage">
        <p><%= t 'controls.filter.edit_default.instructions' %></p>
        <a class="saveEditedFilter button default" href="#save"><%= t 'controls.filter.edit_default.done_button' %></a>
        <a class="discardEditedFilter button" href="#cancel"><%= t 'controls.filter.edit_default.cancel_button' %></a>
        <span class="savingEditedFilterSpinner"></span>
      </div>
    </div>
  <%- end -%>
</div>
<div class="filterCondition">
  <div class="filterCondition sectionContent">
    <a class="filterRemoveButton advanced remove" href="#close"><span class="icon"><%= t 'controls.filter.actions.remove_filter' %></span></a>
    <div class="filterHeadline">
      <a class="filterExpander downArrow"><span class="icon"></span></a>
      <a class="filterLink columnName" href="#change"></a>
      <a class="filterLink subcolumnName" href="#change"></a>
      <a class="filterLink operator" href="#change"></a>
      <a class="filterLink value" href="#change"></a>
    </div>
    <div class="filterValues">
      <div class="autogenerated">
        <div class="autogeneratedPropertiesOverlay"></div>
        <div class="autogeneratedProperties">
          <div class="countLine"><%= t 'controls.filter.edit_default.manual_suggested_html' %></div>
        </div>
      </div>
    </div>
    <div class="menu advanced filterOptionsMenu"></div>
  </div>
</div>

<%= render_translations LocalePart.controls.filter %>
