#!/usr/bin/env ruby
require 'pathname'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

Dir.chdir APP_ROOT do
  # Sets up local development machine to listen to your app on multple hosts
  # e.g. local.dev, storyteller.dev, vertex.dev

  puts "== Installing dependencies =="
  system "gem install bundler --conservative"
  system "bundle check || bundle install"

  puts "\n== Setting up powder server local wildcard DNS =="
  system "brew install pow"
  system "mkdir -p ~/Library/Application\ Support/Pow/Hosts"
  system "ln -s ~/Library/Application\ Support/Pow/Hosts ~/.pow"
  system "pow --install-local"
  system "launchctl load -w ~/Library/LaunchAgents/cx.pow.powd.plist"
  system "powder up"
  system "powder default"

  puts "\n== Restarting application server =="
  system "mkdir -p tmp"
  system "touch tmp/restart.txt"
end
