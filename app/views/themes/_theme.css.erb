/* Defaults */
<%== File.read("#{Rails.root}/app/assets/stylesheets/_variables.scss") %>

/* Overrides */
<%
  custom_themes.keys.each do |theme_section|
    section_styles = custom_themes[theme_section]
    section_styles.each do |style_key, style_value|
      style_key_with_prefix = theme_variable_key(theme_section, style_key)
      theme_value = theme_value(style_key, style_value) %>
      <%== "$#{style_key_with_prefix}: #{theme_value};" %>
<%  end
  end
%>

/* Load template */
<%== File.read("#{Rails.root}/app/assets/stylesheets/site_chrome.scss") %>
