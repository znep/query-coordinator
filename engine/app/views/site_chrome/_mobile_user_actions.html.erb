<div class="mobile-user-actions noselect">
  <% if logged_in? %>
    <%= link_to(t('header.view_profile'), '/profile', :class => 'profile-link site-chrome-mobile-btn inverse-btn') %>
    <%- if current_user_can_see_admin_link? %>
      <%= link_to(t('header.administration'), '/admin', :class => 'admin-link site-chrome-mobile-btn inverse-btn') %>
    <%- end %>
    <%= link_to(t('header.sign_out'), '/logout', :class => 'logout-link site-chrome-mobile-btn') %>
  <% else %>
    <%= link_to(t('header.sign_in'), '/login', :class => 'sign-in-toggle site-chrome-mobile-btn') %>
  <% end %>
</div>
