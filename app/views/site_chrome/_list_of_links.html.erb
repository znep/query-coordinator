<section class="settings-group list-of-links">
  <%
    title = translations[:menu_links][:title]
    description = translations[:menu_links][:description]
    label_title = translations[:link_title_label]
    label_placeholder = translations[:link_title_placeholder]
    url_title = translations[:url_label]
    url_placeholder = translations[:url_placeholder]
  %>

  <h3><%= title %></h3>
  <p><%= description %></p>

  <div class="link-row">
    <%= label_tag(nil, label_title) %>
    <%= label_tag(nil, url_title) %>
  </div>

  <% links.to_a.each_with_index do |link, i| %>
    <% if i < link_count %>
      <div class="link-row">
        <%= text_field_tag("content[#{content_key}]links[][key]", link['key'] || '', placeholder: label_placeholder) %>
        <%= text_field_tag("content[#{content_key}]links[][url]", link['url'] || '', placeholder: url_placeholder) %>
      </div>
    <% end %>
  <% end %>

  <% for i in 0...(link_count - links.to_a.length) %>
    <div class="link-row">
      <%= text_field_tag("content[#{content_key}]links[][key]", '', placeholder: label_placeholder) %>
      <%= text_field_tag("content[#{content_key}]links[][url]", '', placeholder: url_placeholder) %>
    </div>
  <% end %>
</section>
