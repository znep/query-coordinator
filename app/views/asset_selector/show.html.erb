<% content_for :head do %>
  <title><%= get_site_title %></title>
  <meta name="description" content="<%= CurrentDomain.cname %> | Socrata Open Data Catalog">
  <meta name="page_name" content="Asset Selector">

  <%= rendered_stylesheet_tag('asset-selector') %>
<% end %>

<div style="padding: 1.5rem;">
  <div class="asset-selector"></div>
</div>

<% content_for :scripts do %>
  <script>
    var assetSelectorContent = <%= raw @asset_selector_content.to_json %>;

    // Stub I18n so we can use viewCardHelpers.
    // TODO remove this once it isn't necessary, when we have a plan for config/translations
    window.I18n = {
      view_widget: {
        views: 'Views',
        view: 'View'
      },
      related_views: {
        view: 'View'
      }
    };
  </script>

  <%= include_webpack_bundle 'asset-selector/main.js' %>
<% end %>
