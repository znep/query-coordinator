<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
  <%= default_meta_tags %>
  <%= csrf_meta_tags %>
  <title><%= t('editor.default_page_title') %></title>
  <%= site_chrome_stylesheet_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= render 'shared/google_analytics_script' %>
</head>
<body class="<%= open_performance_enabled? ? 'open-performance-enabled' : '' %>">
  <%== site_chrome_admin_header(request, response) if open_performance_enabled? %>
  <%= yield %>
  <%= site_chrome_javascript_tag %>
</body>
</html>
