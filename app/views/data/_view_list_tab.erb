
<div class="tabContentOuter"><div class="tabContentTL"><div class="tabContentBL">
  <div class="tabContent">
    <h2><%= tab_title %></h2>
    <%- if views_total > 0 -%>
      <div class="contentSort<%= (type == 'SEARCH') ? ' hide' : '' %>">
        <% form_tag(data_filter_path(:type => type, :filter => current_filter, :search => search_term), 
            :class => "sortForm") do %>
          <p>
            Sort by
            <%= select_tag("sort_by", sort_select_options(sort_by), :id => "sort_by_" + type) %>
          </p>
        <% end %>
      </div>
  
      <ul class="discoverContentList">
        <%= render(:partial => "view_list_item", :collection => views) %>
      </ul>
    
      <div class="viewPager">
        <%= create_pagination(views_total, @page_size, current_page, generate_filter_url(@current_state, type)) %>
      </div>
    <%- else -%>
      <p class="clearBoth">
        There are no <%= t(:blist_name).pluralize %> that match that filter.  Try broadening your search.
      </p>
    <%- end -%>
  </div>
</div></div></div>

<div class="tabContentNavTR"><div class="tabContentNavBR">
  <div class="tabContentNav">
    <%- unless (type == "SEARCH") -%>
      <h2>Show <%= t(:blists_name) %></h2>
      <ul class="filterList hilightList">
        <%- if (type == "ALL") -%>
          <li><a href="#most_popular" class="tabLink popular"><span>Most popular</span></a></li>
        <%- else -%>
          <li><a href="#all" class="tabLink all"><span>All <%= t(:blists_name) %></span></a></li>
        <%- end -%>
        <%- if (!@current_user.nil?) -%>
          <li><%= link_to("<span>In my network</span>", generate_filter_url(@current_state, type, {:filter => {"inNetwork" => "true"}}),
                  :class => "filterLink#{get_filter_hilight_class({'inNetwork' => 'true'}, current_filter, ' hilight')}") %>
          </li>
        <%- end -%>
      </ul>

      <h2>Browse by tag</h2>
      <ul class="tagList hilightList">
        <%- tag_list.each do |tag| -%>
          <li>
            <%= link_to("<span>#{h(tag.name)}</span>", generate_filter_url(@current_state, type, {:tag => tag.name}),
                  :class => "filterLink#{get_tag_hilight_class(tag.name, current_tag, ' hilight')}" ) %>
          </li>
        <%- end -%>
        <li class="moreLink">
          <%= link_to("More", 
              data_tags_path + generate_filter_url(@current_state, type, {}, '?'), 
                :class => "moreTagsLink") %>
        </li>
      </ul>
    
      <%- if (!is_gov_site?) -%>
        <h2>Browse by Category</h2>
        <ul class="categoryList hilightList">
          
          <%- View.categories.keys.sort.each do |category| -%>
            <%- next if category.nil? || category.length == 0 -%>
            <li><%= link_to("<span>#{category}</span>", generate_filter_url(@current_state, type, {:filter => {"category" => category}}),
                    :class => "filterLink#{get_filter_hilight_class({'category' => category}, current_filter, ' hilight')}") %></li>
          <%- end -%>
        </ul>
      <%- end -%>
    <%- end -%>
  </div>
</div></div>
