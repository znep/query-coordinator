      <div class="meta">
        <h2 class="styleguide-header">Modal</h2>
        <p class="small">Modals can be opened and dismissed using data-* attributes, data-modal="modal-id", and data-modal-dismiss</p>
      </div>
      <div class="example">
        <%= partial "legacy/modals" %>
      </div>
    </section>

