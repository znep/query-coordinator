<% content_for :head do %>
  <%= stylesheet_link_tag "reset-password-screen" %>
  <title><%= t(:blist_company) %> | Forgot password</title>
<% end %>

<div class='dialogBox'>
  <div class='header'>
    <h1><%= t(:blist_company) %></h1>
  </div>

  <div class='mainContent'>
    <div class='title clearfix'>
      <h2>Recover your password</h2>
      <p>If you've forgotten your password, we can send you an email with a link to reset your password.</p>
    </div>

    <%= display_standard_flashes %>

    <% form_tag(forgot_password_url, :id => "forgotPasswordForm",
      :multipart => true) do %>
    <p class='clearfix'>
    <label for="account_login">*Login</label>
    <%= text_field_tag("account[login]") %>
    </p>
      <div class="submitLine clearfix">
        <input type='image' name='submit'
          src='<%= image_path("button_reset_password.png") %>' />
      </div>

    <% end %>

    <div class="contentFooter">
    </div>
  </div>
</div>

<% content_for :js_footer do %>
  <%= render(:partial => "shared/common_js") %>
  <%= javascript_include_tag "plugins/jquery.validate",
    'screens/forgot-password-screen',
    :cache => "cache/accounts_forgot_password_all" %>
<% end %>
