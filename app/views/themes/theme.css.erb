/*** GENERAL ***/

a {
    color: #<%= CurrentDomain.colors.link %>;
}

<% 5.times do |level| %>
h<%= level + 1 %>  {
    color: #<%= CurrentDomain.colors.header[level] || '333333' %>;
}
<% end %>

.bodyInterior {
    border-top-color: #<%= CurrentDomain.colors.header.line %>;
}

/*** OUTER CHROME ***/
#mainNav li,
#mainNav li a span
{
    background-image: <%= box :h => 35, :r => 10, :ry => 10, :fc => CurrentDomain.colors.header.inactive, :bc => CurrentDomain.colors.header.background, :s => 'h' %>;
}

#mainNav li.home .subNav li,
#mainNav li.home .subNav li a span
{
    background-image: none;
    background-color: #<%= CurrentDomain.colors.header.inactive.last[:color] %>;
}
body.home #mainNav li.home .subNav li,
body.home #mainNav li.home .subNav li a span
{
    background-image: none;
    background-color: #<%= CurrentDomain.colors.header.active.last[:color] %>;
}

#mainNav li.home .subNav li.last
{
    background: <%= main_submenu_last_bg(CurrentDomain.colors.header.inactive.last[:color]) %> bottom right;
}
body.home #mainNav li.home .subNav li.last
{
    background: <%= main_submenu_last_bg(CurrentDomain.colors.header.active.last[:color]) %> bottom right;
}

body.home #mainNav li.home,
body.home #mainNav li.home a span,
body.discover #mainNav li.discover a span,
body.community #mainNav li.community a span,
body.discover #mainNav li.discover,
#mainNav ul.subNav li:hover,
#mainNav ul.subNav li:hover a span,
body.home #mainNav li.home .subNav li:hover,
body.home #mainNav li.home .subNav li:hover a span
{
    background-image: <%= box :h => 35, :r => 10, :ry => 10, :fc => CurrentDomain.colors.header.active, :bc => CurrentDomain.colors.header.background, :s => 'h' %>;
}

#mainNav li.home .subNav li.last:hover
{
    background-image: <%= main_submenu_last_bg(CurrentDomain.colors.header.active) %>;
}

#mainLogo a
{
    background-image: <%= theme_image(CurrentDomain.images.logo) %>;
    height: <%= CurrentDomain.images.logo.height %>;
    width: <%= CurrentDomain.images.logo.width %>;
}

/*** DIALOG BOXEN ***/
.dialogBox .header
{
    background-color: #<%= CurrentDomain.colors.accent %>;
}

.dialogBox .header h1 
{
    background-image: <%= theme_image(CurrentDomain.images.dialog_logo) %>;
}

/*** CAROUSEL ***/

.pageBlockHeaderCarousel.carouselWrapper,
.pageBlockHeaderCarousel .carouselOuter,
.pageBlockHeaderCarousel .carouselInner
{
    background-image: <%= box :h => 235, :r => 5, :bc => 'ffffff', :fc => CurrentDomain.colors.carousel.background, :s => 'h' %>;
}

/*** META TABS ***/
.infoContentOuter.listContainer.expanded .infoContentInner,
.infoContentOuter.listContainer .infoContent
{
    background-image: <%= box :h => 3, :ry => 1, :rh => 1, :w => 150, :bc => CurrentDomain.colors.accent %>;
}

.infoContentOuter.listContainer .infoContent dt.hover
{
    background-image: <%= box :h => 19, :w => 19, :r => 9, :rw => 9, :bc => CurrentDomain.colors.accent, :fc => CurrentDomain.colors.summary.hover %>;
}

.infoContentOuter,
.metadataPane .summaryTabs li,
.singleInfoComments li.comment.ownerComment .commentBlock .cornerOuter
{
    border-color: #<%= CurrentDomain.colors.accent %>;
}

.metadataPane .summaryTabs 
{
    border-bottom-color: #<%= CurrentDomain.colors.accent %>;
}

.infoContentOuter.listContainer .infoContent
{
    background-image: <%= box :w => 18, :h => 18, :r => 9, :rw => 9, :ry => 9, :bc => CurrentDomain.colors.inactive, :fc => CurrentDomain.colors.accent %>;
}
.infoContentOuter .infoContentInner
{
    background-image: <%= box :w => 18, :h => 18, :fc => CurrentDomain.colors.summary.active, :bc => CurrentDomain.colors.summary.inactive, :r => 9, :rw => 9, :ry => 9, :ew => 1, :ec => CurrentDomain.colors.accent %>;
}

.infoContentOuter .infoContentWrapper
{
    background-image: <%= box :w => 18, :h => 18, :fc => CurrentDomain.colors.summary.active, :bc => CurrentDomain.colors.summary.inactive, :r => 9, :rx => 9, :rw => 9, :ry => 9, :ew => 1, :ec => CurrentDomain.colors.accent %>;
}

.metadataPane .summaryTabs li .tabOuter,
.metadataPane .summaryTabs li .tabInner
{
    background-image: <%= box :h => 23, :r => 3, :rh => 20, :fc => CurrentDomain.colors.summary.inactive, :bc => CurrentDomain.colors.summary.inactive, :ew => 1, :ec => CurrentDomain.colors.accent, :s => 'h' %>;
}

.metadataPane .summaryTabs li.active .tabOuter,
.metadataPane .summaryTabs li.active .tabInner
{
    background-image: <%= box :h => 23, :r => 3, :rh => 20, :fc => CurrentDomain.colors.summary.active, :bc => CurrentDomain.colors.summary.inactive, :ew => 1, :ec => CurrentDomain.colors.accent, :s => 'h' %>;
}

/*** PUBLISH TOOL ***/
#publishContent .publishHeader .publishCodeWrapper
{
    background-color: #<%= CurrentDomain.colors.accent %>;
}

#publishOptionsPane .infoContentRightBg
{
    background: <%= box :h => 3, :w => 150, :rh => 1, :ry => 1, :bc => CurrentDomain.colors.accent %> -10px 0 repeat-y;
}

/*** DATASET BUTTON BAR ***/
#lensBody .headerBar .staticLink:hover,
a.dropdownLink:hover .midWrapper,
.filterDatasetWrapper .filterTableHeaderRow
{
    background: <%= box :h => 24, :w => 3, :rx => 1, :rw => 1, :fc => CurrentDomain.colors.accent %> repeat-x;
}

a.dropdownLink.clicked .midWrapper
{
    background: <%= box :h => 24, :w => 3, :rx => 1, :rw => 1, :fc => CurrentDomain.colors.buttons.active %> repeat-x;
}

a.dropdownLink:hover,
a.dropdownLink:hover .outerWrapper
{
    background-image: <%= box :h => 24, :w => 5, :fc => CurrentDomain.colors.buttons.hover %>;
}

a.dropdownLink.clicked,
a.dropdownLink.clicked .outerWrapper
{
    background-image: <%= box :h => 24, :w => 5, :fc => CurrentDomain.colors.buttons.active %>;
}

/*** PROFILE PAGE ***/
#profile #welcome .welcomeTL
#profile #welcome .welcomeTR
#profile #welcome .welcome-titlebar
{
    background: <%= box :rh =>34, :s => 'h', :h => 44, :r => 10, :fc => CurrentDomain.colors.welcome.title, :ec => CurrentDomain.colors.welcome.border, :ew => 1 %>  no-repeat;
    zoom: 1;    
}

#profile #welcome .welcomeTL
{
    padding-left: 10px;
    zoom: 1;
}
#profile #welcome .welcomeTR
{
    background-position: right -68px;
    padding-right: 10px;
}
#profile #welcome .welcome-titlebar
{
    background-position: right -34px;
    position: relative;
}
#profile #welcome .welcome-titlebar h1
{
    color: #fff;
    font-size: 1.4em;
    font-weight: bold;
    padding: 0.5em 1em;
    margin-bottom: 0;
}
#profile #welcome .welcome-titlebar span.close
{
    position: absolute;
    right: 0px;
    top: 9px;
    background: url(/stylesheets/images/content/dialog_close_button.png) no-repeat;
    line-height: 100px;
    overflow: hidden;
    width: 16px;
    height: 16px;
}
#profile #welcome .welcomeBL
#profile #welcome .welcomeBR
#profile #welcome .welcome-content
{
    background: <%= box :ry => 10, :rh => 78, :s => 'h', :h => 88, :r => 10, :fc => CurrentDomain.colors.welcome.body, :ec => CurrentDomain.colors.welcome.border, :ew => 1 %>  no-repeat;    
    height: 78px;
}
#profile #welcome .welcomeBL
{
    border-top: 1px solid #9ba5a1;
    padding-left: 10px;
}
#profile #welcome .welcomeBR
{
    background-position: right -156px;
    padding-right: 10px;
}
#profile #welcome .welcome-content
{
    background-position: right -78px;
}

