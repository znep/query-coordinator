<% content_for :head do %>
  <%= rendered_stylesheet_tag 'administration-analytics-screen' %>
  <%= stylesheet_link_merged 'analytics-shared' %>
  <title>Dataset Analytics - <%= @view.name %> | <%= CurrentDomain.strings.site_title %></title>
<% end %>

<% content_for :skip_links do %>
  <a href="?no_js=true">Disable Javascript on this page</a>
<% end %>

<%= render :partial => 'left_nav' %>

<div class="contentBox">
  <div id="analyticsDataContainer" class="datasetMetrics">
    <div class="navigation">
      <p>
        <%= link_to 'Analytics', :action => 'analytics' %> &bull;
        <%#= link_to 'Datasets', :action => 'dataset' %> <!-- &bull; -->
        <%= link_to @view.name, @view.href %>
      </p>
    </div>
    <div>
      <%= render :partial => 'shared/metrics_timing' %>
      <h1><%= @view.name %></h1>
    </div>

    <div class="summaryDisplay clearfix container"> </div>

    <div class="chartsDisplay container">
      <div class="flash error message errorMessage">
        <h3>An error occured loading the metrics data. Please try again later</h3>
      </div>
    </div>

    <div class="detailDisplay clearfix container"></div>

    <div class="topDisplay clearfix container"></div>
  </div>
</div>

<div class="clearfix"></div>

<% content_for :templates do %>
  <%= render :partial => 'shared/metrics_sections' %>
  <%= render :partial => 'shared/control_templates' %>
<%- end -%>

<% content_for :js_footer do %>
  <%- unless params[:no_js] == 'true' -%>
    <script type="text/javascript">
      blist.namespace.fetch('blist.metrics');
      blist.metrics.viewID = '<%= @view.id %>';
    </script>
    <%= javascript_include_merged 'shared-metrics' %>
    <%= javascript_include_tag 'screens/dataset-metrics' %>
  <%- end -%>
<% end %>
