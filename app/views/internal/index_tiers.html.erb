<% content_for :head do %>
<%= stylesheet_link_merged 'internal-shared' %>
<%= rendered_stylesheet_tag 'internal' %>
<title>Tiers | Internal Panel | <%= CurrentDomain.strings.site_title %></title>
<% end %>

<%= render :partial => 'left_nav' %>

<div class="contentBox withLeftNavigation">
  <div class='content'>

    <h1>All Tiers:</h1>

    <% if @tiers.nil? || @tiers.size <= 0 %>
      <p>No tiers found.</p>
    <% else %>
      <ul>
        <% @tiers.each do |tier| %>
          <li><a href="/internal/tiers/<%= tier.name %>"><%= tier.name %></a></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
