# This database config is used by the jenkins server for running tests at build time
# The storyteller_su role is a SUPERUSER role in postgres
test:
  adapter: postgresql
  encoding: unicode
  host: localhost
  port: 5432
  database: storyteller_test
  username: storyteller_su
  password: storyteller_su

aws_migrations:
  adapter: postgresql
  encoding: unicode
  host: <%= ENV['PG_DB_HOST'] %>
  database: <%= ENV['PG_DB_NAME'] %>
  port: <%= ENV['PG_DB_PORT'] %>
  username: <%= ENV['PG_DB_USER'] %>
  password: <%= ENV['PG_DB_PASSWORD'] %>
