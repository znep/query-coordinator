<!DOCTYPE html>
<html>
<head>
  <title>Storyteller</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'airbrake-js-client/dist/client' %>
  <%= javascript_include_tag 'application' %>
  <% if needs_view_assets? %>
    <%= stylesheet_link_tag    'story-view', media: 'all' %>
    <%= javascript_include_tag 'view' %>
  <% end %>
  <%= csrf_meta_tags %>

  <meta name="twitter:card" content="summary">
  <meta name="twitter:site" content="@govstories">
  <meta property="og:title" content="<%= core_attributes['name'] %>">
  <meta property="og:description" content="<%= core_attributes['description'] %>">
  <% @story.block_images.each do |image| %>
  <meta property="og:image" content="<%= image %>">
  <% end %>

  <link rel="shortcut icon" href="/favicon.ico">
</head>
<body class="story-view">

<%= yield %>

<%= render 'shared/i18n_for_js' %>
<%= render 'shared/app_config_for_js' %>
</body>
</html>
