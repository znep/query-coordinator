<% content = @site_chrome.content['footer'] %>

<%= form_tag('#') do %>

  <section class="settings-group">
    <div class="settings-form">
      <%= label_tag('footer_logo', translations[:footer_logo][:title]) %>
      <%= text_field_tag('footer_logo', content['logo']['src'], placeholder: translations[:footer_logo][:placeholder]) %>
    </div>
    <aside><p><%= translations[:footer_logo][:description] %></p></aside>
  </section>

  <section class="settings-group">
    <div class="settings-form half">
      <%= label_tag('footer_background_color', translations[:footer_background_color][:title]) %>
      <%= text_field_tag('footer_background_color', content['styles']['bg_color'], placeholder: translations[:footer_background_color][:placeholder]) %>
    </div>
    <div class="settings-form half">
      <%= label_tag('footer_text_link_color', translations[:footer_text_link_color][:title]) %>
      <%= text_field_tag('footer_text_link_color', content['styles']['fg_color'], placeholder: translations[:footer_text_link_color][:placeholder]) %>
    </div>
    <aside><p><%= translations[:footer_background_color][:description] %></p></aside>
  </section>

  <%= render(
    'list_of_links',
    :links => content['links'],
    :translations => translations,
    :title => translations[:menu_links][:title],
    :description => translations[:menu_links][:description],
    :label_title => translations[:link_title_label],
    :label_placeholder => translations[:link_title_placeholder],
    :url_title => translations[:url_label],
    :url_placeholder => translations[:url_placeholder]
  ) %>

<% end %>
