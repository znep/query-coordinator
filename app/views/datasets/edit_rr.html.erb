<% content_for :head do %>
  <%= rendered_stylesheet_tag 'dataset-edit-rr' %>
  <%= include_stylesheets 'grid-sidebar' %>
  <title>Editing Rich Display for <%= @view.name %> | <%= CurrentDomain.strings.site_title %></title>
<% end %>

<div class="contentBox fixedWidth" id="datasetEditRR">
  <div class="header clearfix">
    <h1>Editing Rich Display for <%= @view.name %></h1>
    <a href="<%= @view.href %>" class="returnLink">Return to Dataset</a>

    <div class="actions">
      <a href="#save" class="saveButton button">Save</a>
      <a href="#save" class="revertButton button">Revert Changes</a>
      <span class="loadingIcon">Working...</span>
    </div>
  </div>

  <div id='layoutContainer'>
  </div>

  <div id='gridSidebar'></div>
</div>

<% content_for :js_footer do %>
  <%= include_javascripts 'screen-dataset-edit-rr' %>
<% end %>
