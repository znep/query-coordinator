<span class="socrata-icon-settings"></span>

<ul role="menu" aria-hidden="true">
  <%- if current_user_can_see_activity_logs? -%>
    <li>
      <a href="<%= site_chrome_massage_url('/admin/activity_feed') %>">
        <span><%= t('shared.site_chrome.admin.settings.activity_log') %></span>
      </a>
    </li>
  <%- end -%>

  <%- if current_user_can_see_asset_inventory? -%>
    <% if use_internal_asset_manager? %>
      <li>
        <a href="<%= site_chrome_massage_url('/admin/assets') %>">
          <span><%= t('shared.site_chrome.admin.settings.asset_inventory') %></span>
        </a>
      </li>
    <% else %>
      <li>
        <a href="<%= site_chrome_massage_url('/admin/datasets') %>">
          <span><%= t('shared.site_chrome.admin.settings.datasets') %></span>
        </a>
      </li>
    <%- end -%>
  <%- end -%>

  <%- if current_user_can_see_analytics? -%>
    <li>
      <a href="<%= site_chrome_massage_url('/admin/analytics') %>">
        <span><%= t('shared.site_chrome.admin.settings.analytics') %></span>
      </a>
    </li>
  <%- end -%>

  <%- if current_user_can_see_users? -%>
    <li>
      <a href="<%= site_chrome_massage_url('/admin/users') %>">
        <span><%= t('shared.site_chrome.admin.settings.users') %></span>
      </a>
    </li>
  <%- end -%>

  <%- if current_user_can_see_administration? -%>
    <li class="separator"></li>
    <li>
      <a href="<%= site_chrome_massage_url('/admin') %>">
        <span><%= t('shared.site_chrome.admin.settings.administration') %></span>
      </a>
    </li>
  <%- end -%>
</ul>
