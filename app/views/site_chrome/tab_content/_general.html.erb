<%= form_tag update_site_chrome_path(anchor: {tab: :general}), id: 'tab_form_general', method: :put, remote: true do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= render('site_chrome/tab_content/form_field',
             fields: [:general, :template],
             translation: translations[:template]) %>

  <%= render('site_chrome/tab_content/form_field',
             fields: [:general, :window_title_display],
             translation: translations[:window_title_display]) %>

  <%= render('site_chrome/tab_content/form_field',
             fields: [:general, :window_icon],
             translation: translations[:window_icon]) %>

  <%= render('site_chrome/tab_content/form_field',
             fields: [:general, :google_analytics_token],
             translation: translations[:google_analytics_token]) %>
<% end %>
