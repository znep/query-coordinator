<div class="searchbox">
  <form action="<%= path %>" method="get">
    <% unless local_assigns[:mobile] %><span class="icon-search" title="Search"></span><% end %>
    <label>
      <%= text_field_tag('q', nil, id: nil, placeholder: 'Search',
        onkeyup: local_assigns[:vanishing_search_button] ? 'toggleSearchButton(this)' : nil) %>
      <span class="searchbox-label">Search</span>
    </label>
    <button type="submit" class="search-button site-chrome-btn btn-simple" value="">
      <% if local_assigns[:mobile] %>
        <span class="icon-search" title="Search"></span>
      <% else %>
        Search
      <% end %>
    </button>
  </form>
</div>
