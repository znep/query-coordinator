<section class="settings-group">

  <% [left, right].each do |field| %>
    <div class="settings-form half">
      <% fields = field[:fields] %>

      <%= label_tag(form_field(fields), t("#{field[:locale_string]}.title")) %>
      <%= text_field_tag(
        form_field(fields),
        fetch_content(fields),
        :placeholder => t("#{field[:locale_string]}.placeholder")) %>
    </div>
  <% end %>

  <% #NOTE: translation is getting pulled from the left-most field %>
  <aside><p><%= t("#{left[:locale_string]}.description") %></p></aside>
</section>
