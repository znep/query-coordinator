window.socrata = window.socrata || {};
window.socrata.storyteller = window.socrata.storyteller || {};
window.storyteller = window.socrata.storyteller;

(function(root) {

  function AssetFinder() {

    this.getRelativeUrlRoot = function() {
      return '<%= config.relative_url_root %>';
    };

    this.getStyleAssetPath = function(name) {

      var assetPaths = {
        'themes': '<%= asset_path("themes/themes.css") %>'
      }

      return assetPaths[name];
    };

    this.getImageAssetPath = function(name) {
      var assetPaths = {
        'cover-image': '<%= asset_path("editor/cover-image.png") %>'
      };

      return assetPaths[name];
    };
  }

  root.socrata.storyteller.AssetFinder = AssetFinder;
})(window);
