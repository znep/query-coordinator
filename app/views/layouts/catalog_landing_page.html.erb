<!doctype html>
<html lang="<%= I18n.locale %>">
  <head>
    <title><%= CurrentDomain.strings.site_title %></title>

    <%= rendered_stylesheet_tag('catalog-landing-page') %>
    <%= rendered_stylesheet_tag('asset-selector') %>

    <link rel="stylesheet" href="/stylesheets/socrata-components/css/styleguide.min.css" />
    <link rel="stylesheet" href="/stylesheets/socrata-visualizations/socrata-visualizations.css" />
    <link rel="shortcut icon" href="<%= theme_image_url(CurrentDomain.theme.images.favicon) %>" />

    <%= site_chrome_meta_viewport_tag %>
    <%= site_chrome_stylesheet_tag %>

    <%= rendered_stylesheet_tag 'base' %>

    <%= yield :head %>

    <%= jquery_include('2.2.4') %>
    <script src="/javascripts/plugins/lodash.js"></script>
    <script> window.jquery = window.jQuery; </script>
    <script>var I18n = I18n || {};</script>
  </head>

  <body>
    <%== site_chrome_header(request, response, :size => site_chrome_size) %>

    <div id="noticeContainer">
      <%= display_styleguide_flashes %>
      <%= display_standard_flashes %>
    </div>

    <%= yield :catalog_landing_page %>

    <%= yield %>

    <%== site_chrome_footer(request, response, :size => site_chrome_size) %>

    <%# dotdotdot and velocity are finicky about jQuery. -%>
    <%# We made jquery an external, load it here and then bind it to window to be loaded into our Webpack bundle. -%>

    <%= render_dataset_landing_page_translations %>
    <%= render_catalog_landing_page_translations %>
    <%= render_catalog_landing_page_mixpanel_config %>
    <%= render_catalog_landing_page_session_data %>
    <%= render_catalog_landing_page_server_config %>
    <%== render_catalog_landing_page_initial_state %>

    <%= include_webpack_bundle 'catalog-landing-page/main.js' %>
    <%= site_chrome_javascript_tag %>
  </body>
</html>
