<div
  class="searchbox"
  data-autocomplete="<%= get_feature_flag('browse_autocomplete') ? true : false %>"
  data-autocomplete-disable-animation="true"
  data-autocomplete-mobile="<%= local_assigns[:mobile] == true %>">
  <form action="<%= path %>" method="get">
    <fieldset>
      <% unless local_assigns[:mobile] %>
        <span class="socrata-icon-search" title="<%= t('shared.site_chrome.header.search') %>"></span>
      <% end %>
      <label>
        <%= text_field_tag('q', nil, id: nil, placeholder: t('shared.site_chrome.header.search'),
          class: "searchbox-input #{'vanishing' if local_assigns[:vanishing_search_button]}") %>
        <span class="searchbox-label"><%= t('shared.site_chrome.header.search') %></span>
      </label>
      <button type="submit" class="search-button site-chrome-btn btn-simple" value="">
        <% if local_assigns[:mobile] %>
          <span class="socrata-icon-search" title="<%= t('shared.site_chrome.header.search') %>"></span>
        <% else %>
          <%= t('shared.site_chrome.header.search') %>
        <% end %>
      </button>
      <%# EN-12158: Force a sortBy of "relevance" on the query results %>
      <input type="hidden" name="sortBy" value="relevance" />
    </fieldset>
  </form>
</div>
