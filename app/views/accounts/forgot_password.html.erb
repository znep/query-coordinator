<% content_for :head do %>
  <%= rendered_stylesheet_tag 'screen-login' %>

  <title><%= CurrentDomain.strings.site_title %> | Forgot Password</title>
<% end %>

<div class="modalContentBox siteContent">
  <div class="contentHeader">
    <h1>Recover Your Password</h1>
  </div>
  <div class="contentBoxInner clearfix">
    <%= display_standard_flashes %>

    <p class="explanation">If you've forgotten your password, we can send you an email with a link to reset your password.</p>

    <%- if current_user.nil? -%>
      <%= form_tag(forgot_password_path, :id => "forgotPasswordForm",
        :multipart => true, :class => 'commonForm') do %>
        <div class="line">
          <label for="account_login" class="required">Email</label>
          <%= text_field_tag("login", nil, :id => 'account_login') %>
        </div>
        <div class="submitLine">
          <input type="submit" class="button default" value="Reset Password" />
        </div>
      <% end %>
    <%- else -%>
      <div class="flash error">
        Unable to reset password: you are already logged in.
      </div>
    <%- end -%>

  </div>
</div>

<% content_for :js_footer do %>
  <%= include_javascripts 'screen-forgot-password' %>
<% end %>
