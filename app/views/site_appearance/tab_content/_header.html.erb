<% header = @content['header'] %>

<% #TODO: factor these out into a single lookup table %>
<%= render('site_appearance/tab_content/form_field',
  :fields => [:header, :logo, :src],
  :locale_string => "#{locale_string}.header_bar_logo") %>

<%= render('site_appearance/tab_content/form_field_pair',
  :left => {
    :fields => [:header, :styles, :logo_height],
    :locale_string => "#{locale_string}.header_logo_height"
  },
  :right => {
    :fields => [:header, :styles, :logo_width],
    :locale_string => "#{locale_string}.header_logo_width"
  },
  :description => t("#{locale_string}.logo_height_logo_width.description")) %>

<%= render('site_appearance/tab_content/form_field',
  :fields => [:header, :logo, :url],
  :locale_string => "#{locale_string}.header_logo_url") %>

<%= render('site_appearance/tab_content/form_field',
  :fields => [:header, :logo, :alt],
  :locale_string => "#{locale_string}.header_bar_logo_alt") %>

<%= render('site_appearance/tab_content/form_field',
  :fields => [:locales, current_locale(suppress_locale = false), :header, :site_name],
  :locale_string => "#{locale_string}.header_display_name") %>

<%= render('site_appearance/tab_content/form_field_pair',
  :left => {
    :fields => [:header, :styles, :display_name_fg_color],
    :locale_string => "#{locale_string}.header_display_name_color"
  },
  :right => {
    :fields => [:header, :styles, :display_name_size],
    :locale_string => "#{locale_string}.header_display_name_size"
  },
  :description => t("#{locale_string}.display_name_color_display_name_size.description")) %>

<%= render('site_appearance/tab_content/form_field_pair',
  :left => {
    :fields => [:header, :styles, :bg_color],
    :locale_string => "#{locale_string}.bar_background_color"
  },
  :right => {
    :fields => [:header, :styles, :bg_color_secondary],
    :locale_string => "#{locale_string}.bar_secondary_background_color"
  },
  :description => t("#{locale_string}.bar_background_color_bar_secondary_background_color.description")) %>

<%= render('site_appearance/tab_content/form_field',
  :fields => [:header, :styles, :fg_color],
  :locale_string => "#{locale_string}.bar_text_link_color") %>

<%= section_separator %>

<%= render('list_of_links',
  :link_count => 15,
  :links => header['links'],
  :content_key => :header,
  :locale_string => locale_string,
  :allow_child_links => true) %>
