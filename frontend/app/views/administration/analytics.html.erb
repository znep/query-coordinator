<% content_for :head do %>
  <%= rendered_stylesheet_tag 'administration-screen' %>
  <%= rendered_stylesheet_tag 'administration-analytics-screen' %>
  <%= rendered_stylesheet_tag 'analytics-shared' %>
  <title>Site Analytics - Overview | <%= get_site_title %></title>
<% end %>

<% content_for :skip_links do %>
  <%= link_to t('core.no_js'), '?no_js=true' %>
<% end %>

<% content_for :breadcrumb do %>
  <%= t('screens.stats.site_analytics') %>
<% end %>

<%= render '/internal/left_nav' %>

<div id="analyticsDataContainer" class="overviewMetrics">
  <div class="contentBox withLeftNavigation analyticsDataContainer">
    <div>
      <div class="adminHeader floating analytics clearfix">
        <span class="icon"></span>
        <h1 class="floating"><%= t('screens.stats.site_analytics') %></h1>
        <%= render 'shared/metrics_timing' %>
        <a href="#Export" rel="external" class="exportMetricsLink" data-exportbase="/api/site_metrics.csv?method=export&">
          <%= t('screens.stats.export') %>
        </a>
      </div>
    </div>
    <div class="summaryDisplay clearfix container"></div>
<%- unless FeatureFlags.derive(@view, request).embetter_analytics_page -%>
  </div>
  <div class="contentBox withLeftNavigation analyticsDataContainer">
<%- end -%>
    <div class="chartsDisplay container">
      <div class="flash error message errorMessage">
        <h3><%= t('screens.stats.error_loading_metrics') %></h3>
      </div>
    </div>
<%- unless FeatureFlags.derive(@view, request).embetter_analytics_page -%>
  </div>
  <div class="contentBox withLeftNavigation analyticsDataContainer">
<%- end -%>
    <div class="detailDisplay clearfix container"></div>

    <div class="topDisplay clearfix container">
      <div class="leftColumn"></div>
      <div class="rightColumn"></div>
    </div>
  </div>
</div>

<div class="clearfix"></div>

<%= render_admin_qualtrics %>

<% content_for :templates do %>
  <%= render 'shared/metrics_sections' %>
  <%= render 'shared/control_templates' %>
<%- end -%>

<% content_for :js_footer do %>
  <%- unless params[:no_js] == 'true' -%>
    <script type="text/javascript">
        blist.configuration.govStatMetricsEnabled = <%= module_enabled?(:govStat) == true %>;
    </script>
    <%= include_webpack_bundle 'open-data/sanitize-html.js' %>
    <%= include_webpack_bundle 'open-data/shared-metrics.js' %>
    <%= include_webpack_bundle 'open-data/admin-metrics.js' %>
  <%- end -%>
<% end %>

<% content_for :translations do %>
  <%= render_translations LocalePart.screens.ds %>
  <%= render_translations LocalePart.screens.stats %>
  <%= render_translations LocalePart.plugins.daterangepicker %>
  <%= render_translations LocalePart.table %>
<% end %>
