<header id="site-chrome-header" template="default">
  <div class="banner">
    <%= header_logo %>

    <nav class="desktop">
      <div class="nav-links">
        <%= render 'site_chrome/nav_links' %>
        <%= content_tag(:span, nil, :class => 'divider') %>
      </div>

      <div class="social-links">
        <%= render 'site_chrome/social_links', show_label: false %>
      </div>

      <% if valid_social_links(get_site_chrome.general[:social_shares]).present? %>
        <%= content_tag(:span, nil, :class => 'divider') %>
      <% end %>

      <%= render 'site_chrome/user_actions' %>
    </nav>

    <nav class="mobile">
      <a class="site-chrome-btn menu-toggle" href="#" onclick="mobileMenuToggle()">
        <span class="icon-hamburger"></span>
        Menu
      </a>
    </nav>
  </div>

  <%= render 'site_chrome/mobile_menu' %>

</header>
