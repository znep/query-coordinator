<footer id="chrome-footer">
  <div class="content">
    <div class="logo">
      <%= logo(@footer) %>
      <span class="site-name"><%= site_name %></span>

      <div class="social-links">
        <%= render 'social_links', show_label: true %>
      </div>
    </div>

    <div class="links">
      <ul class="links-col">

        <% @footer['links'].each do |link| %>
          <li>
            <%= link_to(localized("footer.links.#{link['key']}", @locales), link['url'], :class => 'footer-link') %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="copyright">
    <%= copyright %>
  </div>
</footer>
