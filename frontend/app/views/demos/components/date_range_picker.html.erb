<% content_for :head do %>
  <title>Example Usage: DateRangePicker</title>
  <meta http-equiv="content-type" content="text/html; charset=UTF8">
  <%= rendered_stylesheet_tag 'component_example_pages' %>
<% end %>

<section class="styleguide-section" id="color-picker">
  <p>
    <a class="btn btn-default" href='/internal/demos/components'><span class="socrata-icon-arrow-left"></span> Components</a>
  </p>
  <h2 class="styleguide-header">Date Range Picker</h2>
  <div class="styleguide-example">
    <div id="date-range-picker-container"></div>
  </div>
  <div class="styleguide-code-example" id="styleguide-code-example-1"></div>
</section>

<% content_for :scripts do %>
  <%= render_demos_javascript_environment %>
  <%= include_webpack_bundle 'shared/componentExamplePagesMain' %>

  <script type="text/javascript" id="example-1">
    $(() => {
      const props = {
        value: {
          start: '2014-06-10T00:00:00',
          end: '2016-06-06T00:00:00'
        },
        onChange: (newValue) => {
          props.value = newValue;
          render();
        }
      };

      function render() {
        ReactDOM.render(
          React.createElement(components.DateRangePicker, props),
          document.getElementById('date-range-picker-container')
        );
      }

      render();
    });
  </script>
<% end %>
