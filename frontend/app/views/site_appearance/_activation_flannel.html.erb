<div id="site_appearance_activation_flannel" class="flannel flannel-hidden">
  <header class="flannel-header">
    <h1 class="flannel-header-title h5"><%= t('screens.admin.site_appearance.get_excited') %> </h1>
    <button class="btn btn-transparent flannel-header-dismiss" data-flannel-dismiss>
      <span class="icon-close-2"></span>
    </button>
  </header>
  <section class="flannel-content">
    <p>
      <%== t('screens.admin.site_appearance.you_are_about_html') %>
    </p>
  </section>
  <footer class="flannel-actions">
    <%= link_to('#') do %>
      <button class="btn btn-default btn-xs" data-flannel-dismiss>
        <%= t('screens.admin.site_appearance.cancel') %>
      </button>
    <% end %>
    <%= link_to('#', :class => 'activate-site-appearance') do %>
      <button class="btn btn-primary btn-xs" data-flannel-dismiss>
        <%= t('screens.admin.site_appearance.ok') %>
      </button>
    <% end %>
  </footer>
</div>
