<%- connector = 'screens.admin.connector' %>
<% content_for :head do %>
  <%= rendered_stylesheet_tag 'administration-screen' %>
  <%= rendered_stylesheet_tag 'administration-connectors' %>
  <title><%= t("#{connector}.title") %> | <%= CurrentDomain.strings.site_title %></title>
<% end %>

<%= render :partial => 'left_nav' %>

<div id="connector-content" class="contentBox withLeftNavigation">
  <div class="adminHeader connectors">
    <span class="icon"></span>
    <h1><%= t("#{connector}.add_connector") %></h1>
    <div class="connector-list-go-back">
      <%= link_to(t("#{connector}.back_to_connector_list"),
                  :controller => '/administration/connector',
                  :action => 'connectors') %>
    </div>
  </div>
  <div class="addSourceWrapper">
    <%= form_tag({:action => 'create_connector'}, :method => :post, :multipart => true, :class => 'commonForm add-connector') do -%>
      <%= render :partial => 'new_connector_form' %>
    <%- end -%>
  </div>
</div>

<%= render_admin_userzoom %>
