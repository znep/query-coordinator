<% content_for :head do %>
  <title>Example Usage: MultiSelect</title>
  <meta http-equiv="content-type" content="text/html; charset=UTF8">
  <%= rendered_stylesheet_tag 'component_example_pages' %>
<% end %>

<section class="styleguide-section">
  <p>
    <a class="btn btn-default" href='/internal/demos/components'>
      <span class="socrata-icon-arrow-left"></span>
      Components
    </a>
  </p>
  <h2 class="styleguide-header">MultiSelect</h2>

    <div class="styleguide-example">
      <div id="multiselect-container">
    </div>

    <div class="styleguide-code-example" id="styleguide-code-example-1"></div>
  </div>
</section>

<% content_for :scripts do %>
  <%= render_demos_javascript_environment %>
  <%= include_webpack_bundle 'shared/componentExamplePagesMain' %>

  <script type="text/javascript" id="example-1">
    $(() => {
      const props = {
        onSelectedOptionsChanged: (options) => {
          console.log('Options selected:', options);
        },
        options: [
          'Labrador Retriever',
          'Golden Retriever',
          'Bulldog',
          'Beagle',
          'Poodle',
          'Labradoodle',
          'French Bulldog',
          'Pug',
          'Chihuahua'
        ],
        maxSelectedOptions: 3
      };

      ReactDOM.render(
        React.createElement(components.SimpleMultiSelect, props),
        document.getElementById('multiselect-container')
      );
    });
  </script>
<% end %>
