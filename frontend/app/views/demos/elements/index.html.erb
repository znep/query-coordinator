<% content_for :scripts do %>
  <script type="text/javascript">
    $(function() {
      // This is just a toy implementation.
      var flyout = $('#socrata-flyout');
      var trigger = $('#example-flyout-trigger');
      trigger.hover(
        function() {
          flyout.addClass('visible');
          flyout.css('top', trigger.position().top - $(window).scrollTop() + 10);
          flyout.css('left', trigger.position().left + 80);
        },
        function() {
          flyout.removeClass('visible');
        }
      );
    });
  </script>
<% end %>

