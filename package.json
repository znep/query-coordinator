{
  "name": "socrata-visualizations",
  "repository": {
    "type": "git",
    "url": "https://github.com/socrata/frontend-visualizations.git"
  },
  "scripts": {
    "lint": "eslint -c package.json  --ignore-path .eslintignore *.js components/*.js",
    "test": "karma start karma.conf.js --singleRun true",
    "watch": "karma start karma.conf.js -v --singleRun false",
    "compile-css": "node-sass --output-style expanded socrata.visualizations.rowInspector.scss socrata.visualizations.rowInspector.css"
  },
  "homepage": "https://github.com/socrata/frontend-visualizations",
  "devDependencies": {
    "chai": "^3.0.0",
    "eslint": "^1.5.1",
    "karma": "^0.12.36",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^0.3.1",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^0.2.0",
    "karma-scss-preprocessor": "^1.0.0",
    "karma-sinon": "^1.0.4",
    "mocha": "^2.2.5",
    "node-sass": "^3.3.2",
    "phantomjs": "^1.9.17",
    "sinon": "^1.15.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "camelcase": 1,
      "consistent-return": 0,
      "dot-location": [
        1,
        "object"
      ],
      "dot-notation": [
        1,
        {
          "allowKeywords": false
        }
      ],
      "eol-last": 1,
      "indent": 0,
      "new-cap": [
        1,
        {
          "newIsCapExceptions": [
            "pbf"
          ]
        }
      ],
      "no-console": 0,
      "no-extend-native": 2,
      "no-extra-semi": 1,
      "no-shadow": [
        2,
        {
          "hoist": "all"
        }
      ],
      "no-spaced-func": 2,
      "no-trailing-spaces": 2,
      "no-underscore-dangle": 0,
      "no-unused-vars": 1,
      "no-use-before-define": 0,
      "quotes": [
        1,
        "single"
      ],
      "semi": [
        2,
        "always"
      ],
      "space-after-keywords": [
        2,
        "always"
      ],
      "space-before-blocks": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        2,
        "never"
      ],
      "space-infix-ops": 2,
      "strict": 2
    },
    "globals": {
      "$": true,
      "_": true,
      "d3": true,
      "L": true,
      "pbf": true,
      "socrata": true,
      "VBArray": true,
      "VectorTile": true
    }
  }
}
