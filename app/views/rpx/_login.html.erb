
<% if flash[:notice_login]  %>
  <div class="flash notice"><%= flash[:notice_login] %></div>
<% else %>
  <p class="chooseMessage">After signing in, your 3rd-party credentials will be associated with this
  account.</p>
<% end %>

<% form_for @user_session, :url => rpx_login_path do |f| %>
  <%# Save off the form fields from the signup side, in case they change their mind
      and go create a new account. %>
  <% fields_for :signup, @signup do |signup|  %>
    <%= signup.hidden_field :openIdIdentifierId %>
    <%= signup.hidden_field :firstName %>
    <%= signup.hidden_field :lastName %>
    <%= signup.hidden_field :email %>
    <%= signup.hidden_field :emailConfirm %>
    <%= signup.hidden_field :login %>
  <% end %>
  <%= render :partial => 'user_sessions/login_form_data', :locals => { :f => f } %>
<% end %>