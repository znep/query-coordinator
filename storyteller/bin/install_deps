#!/bin/bash

set -ex

echo == Installing dependencies ==
# install build dependencies. Hate to have to do this manually, but it's not working well
# in our build process. These gems seem to conflict with gems in the runtime dependencies,
# giving rise to test failures.
gem install localeapp -v '2.4.0'
gem install httparty -v '0.15.6'

gem install bundler --conservative
bundle check || bundle install
npm install
