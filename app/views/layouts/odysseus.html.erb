<!doctype html>

<html>

<!-- powered by Socrata -->

<head>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <%= meta_tags @meta unless @meta.blank? %>
  <%= csrf_meta_tags %>
  <%- unless @link_image_src.blank? -%>
    <link rel="image_src" href="<%= @link_image_src %>" />
  <%- end -%>

  <link rel="apple-touch-icon-precomposed" media="screen" href="/stylesheets/images/icons/retina_display_icon.png"/>
  <link rel="search" type="application/opensearchdescription+xml" href="/opensearch.xml" title="<%= CurrentDomain.strings.site_title %>" />

  <%= rendered_stylesheet_tag 'base' %>
  <%- if module_enabled?(:govStat) -%>
    <link type="text/css" media="all" rel="stylesheet" href="/webfonts/ss-pika.css"/>
    <%- if @suppress_govstat -%>
      <%= rendered_stylesheet_tag 'govstat-base' %>
    <%- else -%>
      <%= rendered_stylesheet_tag 'govstat-layout' %>
    <%- end -%>
  <%- end -%>
  <%= rendered_stylesheet_tag 'print', 'print' %>

  <%= jquery_include('2.0.0') %>

  <%= yield :head %>

  <%- unless CurrentDomain.properties.custom_css.blank? || (module_enabled?(:govStat) && !@suppress_govstat) -%>
    <link type="text/css" media="all" rel="stylesheet" href="/styles/current_site.css?<%="#{REVISION_NUMBER}.#{CurrentDomain.default_config_id}.#{CurrentDomain.default_config_updated_at}"%>"/>
  <%- end -%>

  <link rel="shortcut icon" href="<%= theme_image_url(CurrentDomain.theme.images.favicon) %>" />

  <% unless CurrentDomain.google_analytics_id.blank? %>
    <script>
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '<%= CurrentDomain.google_analytics_id %>'],
                ['_trackPageview'],
                ['_trackPageLoadTime']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  <% end %>

  <%- unless CurrentDomain.properties.typekit_id.blank? -%>
    <script src="//use.typekit.net/<%= CurrentDomain.properties.typekit_id %>.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
  <%- end -%>
</head>

<body data-locale="<%= I18n.locale %>" data-defaultlocale="<%= CurrentDomain.default_locale %>">
  <div class="siteOuterWrapper">
    <div class="siteInnerWrapper">
      <div id="siteHeader" class="clearfix">
        <%- if module_enabled?(:govStat) && !@suppress_govstat -%>
          <%= render_text_template('<div class="clearfix">{{main_logo}}<ul class="siteUserNav">{{account_link}}{{admin_link}}{{urls.headerUser}}{{sign_up_link}}{{sign_in_link}}{{sign_out_link}}</ul></div>') %>
          <ul class="manageActions">
            <li class="home"><a href="<%= manage_path %>" class="ss-home" title="Home">Home</a></li>
            <li class="data"><a href="<%= manage_data_path %>" class="ss-hdd"
              title="Browse and Manage Data">Data</a></li>
            <li class="reports"><a href="<%= manage_reports_path %>" class="ss-notepad"
              title="View and Create Reports">Reports</a></li>
            <li class="goals"><a href="<%= manage_site_config_path %>" class="ss-wrench"
              title="Manage GovStat configuration">Configuration</a></li>
          </ul>
        <%- else -%>
          <%= render_domain_template('header_full') %>
        <%- end -%>
      </div>

      <a name="content"  tabindex="-1"></a>
      <%= render_domain_template('content_chrome') if !module_enabled?(:govStat) || @suppress_govstat %>
      <div class="siteContentWrapper">
        <%= yield :layout %>
      </div>
    </div>
  </div>

  <div id="siteFooter">
    <a name="footerLinks" tabindex="-1"></a>
    <%= render_domain_template(@page_custom_footer || 'footer_full') %>
  </div>

  <%- unless CurrentDomain.theme.js.nil? -%>
    <%- if CurrentDomain.theme.js[:type].to_s == 'static' -%>
      <script src="<%= CurrentDomain.theme.js.source %>"></script>
    <%- elsif CurrentDomain.theme.js[:type].to_s == 'hosted' -%>
      <script src="/assets/<%= CurrentDomain.theme.js.source %>"></script>
    <%- end -%>
  <%- end -%>

  <%# we don't trust custom tracking code to be nonblocking like the async
      GA, so put it down here. %>
  <% unless CurrentDomain.custom_tracking_code.blank? %>
    <%= raw CurrentDomain.custom_tracking_code %>
  <% end %>
</body>

</html>

