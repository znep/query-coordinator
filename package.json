{
  "name": "storyteller",
  "repository": {
    "type": "git",
    "url": "https://github.com/socrata/storyteller.git"
  },
  "scripts": {
    "lint": "eslint"
  },
  "homepage": "https://github.com/socrata/storyteller",
  "devDependencies": {
    "chai": "^3.0.0",
    "eslint": "^0.24.0",
    "karma": "^0.12.36",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^0.3.1",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^0.2.0",
    "karma-sinon": "^1.0.4",
    "karma-sprockets": "^0.3.0",
    "mocha": "^2.2.5",
    "phantomjs": "^1.9.17",
    "sinon": "^1.15.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "rules": {
      "brace-style": [2, "1tbs", {"allowSingleLine": true}],
      "camelcase": 1,
      "consistent-return": 1,
      "dot-location": [1, "object"],
      "dot-notation": [1, {"allowKeywords": true}],
      "eol-last": 1,
      "indent": [1, 2],
      "new-cap": 1,
      "no-console": 0,
      "no-extend-native": 0,
      "no-extra-semi": 1,
      "no-shadow": [2, {"hoist": "all"}],
      "no-spaced-func": 2,
      "no-trailing-spaces": 2,
      "no-underscore-dangle": 0,
      "no-unused-vars": 1,
      "no-use-before-define": 0,
      "quotes": [1, "single"],
      "semi": [2, "always"],
      "space-after-keywords": [2, "always"],
      "space-before-blocks": [2, "always"],
      "space-before-function-paren": [2, "never"],
      "space-infix-ops": 2,
      "strict": 2
    },
    "globals": {
      "$": true,
      "_": true,
      "_socrataVisualizationComponentTemplateRenderers": true,
      "_socrataVisualizationComponentDataRenderers": true,
      "airbrakeJs": true,
      "Constants": true,
      "Actions": true,
      "jQuery": true,
      "I18n": true,
      "socrata": true,
      "Squire": true,
      "Unidragger": true,
      "Unipointer": true,
      "userStoryData": true
    }
  }
}
