<% dialog_content('login', "loginBox") do %>
  <div class='header'>
    <h1><%= t(:blist_company) %></h1>
    <%- if local_assigns[:is_modal] -%>
    <a href='#close_dialog' class='close' title='Close'>Close</a>
    <%- end -%>
  </div>

  <div class='mainContent'>
    <div class='title clearfix'>
      <h2>Sign In</h2> <%= link_to("Sign Up", new_account_path, {:class => 'signupLink'}) %>
    </div>

    <%= display_standard_flashes %>

    <% form_for @user_session do |f| %>
    <%= f.error_messages %>
    <p>
    <%= f.label :login, 'Username' %>
    <%= f.text_field :login %>
    </p>
    <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </p>
   
    <p class='rememberMe'>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    </p>

    <div class='footer clearfix'>
      <%= link_to "Forgot your password / username?", forgot_password_path%>
      <ul class='actionButtons clearfix'>
        <%- if local_assigns[:is_modal] -%>
        <li><a href='#close_login' class='close'>Cancel</a></li>
        <%- end -%>
        <li class='bare'><input type='image' name='submit'
        src='<%= image_path("button_signin.png") %>' /></li>
      </ul>
    </div>
    <% end %>
  </div>
<% end %>
