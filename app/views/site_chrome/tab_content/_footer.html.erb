<% footer = @content['footer'] %>

<%= render('site_chrome/tab_content/form_field',
  :fields => [:footer, :logo, :src],
  :locale_string => "#{locale_string}.footer_logo") %>

<%= render('site_chrome/tab_content/form_field_pair',
  :left => {
    :fields => [:footer, :styles, :logo_height],
    :locale_string => "#{locale_string}.footer_logo_height"
  },
  :right => {
    :fields => [:footer, :styles, :logo_width],
    :locale_string => "#{locale_string}.footer_logo_width"
  }) %>

<%= render('site_chrome/tab_content/form_field',
  :fields => [:locales, current_locale(suppress_locale = false), :footer, :site_name],
  :locale_string => "#{locale_string}.footer_display_name") %>

<%= render('site_chrome/tab_content/form_field_pair',
  :left => {
    :fields => [:footer, :styles, :bg_color],
    :locale_string => "#{locale_string}.footer_background_color"
  },
  :right => {
    :fields => [:footer, :styles, :fg_color],
    :locale_string => "#{locale_string}.footer_text_link_color"
  }) %>

<%= section_separator %>

<%= render('list_of_links',
  :link_count => 15,
  :links => footer['links'],
  :content_key => :footer,
  :locale_string => locale_string) %>

<%= section_separator %>

<% copyright_notice_fields = [:footer, :copyright_notice] %>

<%= render('checkbox',
  :fields => copyright_notice_fields,
  :locale_string => "#{locale_string}.copyright_notice",
  :additional_options => {
    :onchange => 'toggleDisabledCopyrightText(this);'
  }) %>

<% copyright_notice_source_fields = [:locales, current_locale(suppress_locale = false), :footer,
  :copyright_notice_source] %>

<section class="settings-group no-label">
  <div class="settings-form">
    <%= text_field_tag(form_field(copyright_notice_source_fields),
      fetch_content(copyright_notice_source_fields),
      :id => 'copyright-notice-text',
      :placeholder => t("#{locale_string}.copyright_notice_source.placeholder"),
      :disabled => !fetch_boolean(copyright_notice_fields)) %>
  </div>
  <aside><p><%= t("#{locale_string}.copyright_notice_source.description") %></p></aside>
</section>

<%= section_separator %>

<%= render('checkbox',
  :fields => [:footer, :powered_by],
  :locale_string => "#{locale_string}.powered_by",
  :default_checked => true) %>
