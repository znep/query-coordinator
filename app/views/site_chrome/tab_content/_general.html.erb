<%= form_tag site_chrome_path, method: :put, remote: true do %>

  <%= render(partial: 'site_chrome/tab_content/form_field',
             locals: { fields: [:general, :window_or_tab_title_display],
                       translation: translations[:window_or_tab_title_display] }) %>

  <%= render(partial: 'site_chrome/tab_content/form_field',
             locals: { fields: [:general, :window_or_tab_icon],
                       translation: translations[:window_or_tab_icon] }) %>

  <%= submit_tag 'put_general', id: 'general' %>
<% end %>
