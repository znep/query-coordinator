<% content_for :head do %>
  <%= stylesheet_link_tag "signup-screen", "form-common" %>
  <title><%= th.site_title %></title>
<% end %>

<% dialog_content('signup', "signupBox") do %>
  <div class='header'>
    <h1><%= th.company %></h1>
  </div>

  <div class='mainContent'>
    <div class='title clearfix'>
      <h2><strong>We're glad you want to join <%= th.company %>!</strong></h2>
    </div>

    <h3>Create a new <%= th.company %> ID</h3>
    <%= render :partial => "signup_form", :locals => {:is_modal => false} %>

    <h3 class="signup">Sign up using another account</h3>
    <%= render :partial => "rpx/buttons", :locals => {:action => "Sign up"} %>
  </div>
<% end %>

<% content_for :js_footer do %>
  <%= render(:partial => "shared/common_js") %>
  <%= javascript_include_tag "screens/signup-screen", :cache => "cache/accounts_new_all" %>
  <script src="https://rpxnow.com/openid/v2/widget"
          type="text/javascript"></script>
  <script type="text/javascript">
    RPXNOW.overlay = true;
    RPXNOW.language_preference = 'en';
    RPXNOW.flags='show_provider_list';
  </script>

<% end %>
