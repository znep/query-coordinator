<% content_for :head do %>
  <title><%= CurrentDomain.strings.site_title %></title>
<% end %>

<% dialog_content('login', "loginBox") do %>
  <div class='header masterTheme'>
    <h1><%= CurrentDomain.strings.company %></h1>
  </div>

  <div class='mainContent'>
    <div class='title clearfix'>
      <h2>Sign in using your <%= MASTER_DOMAIN_PREFS['strings.company'] %> ID</h2>
    </div>

    <% if !CurrentDomain.strings.disclaimer.nil? %>
      <p class="loginDisclaimer"><%= raw CurrentDomain.strings.disclaimer %></p>
    <% end %>

    <p>
    <%=
    # ok to use raw.  It is our own system config constant
    raw(MASTER_DOMAIN_PREFS['strings.login_tips'])
    %>
    </p>
    <br/>

    <%= render(:partial => 'login') %>
    <%- if module_enabled? :openid_login -%>
      <div class='footer clearfix'>
        <%= render :partial => "rpx/buttons" %>
      </div>
    <%- end -%>
  </div>
<% end %>

<% content_for :js_footer do %>
  <%= javascript_include_merged 'shared-common-all' %>
  <script type="text/javascript">
    $(function ()
    {
        $('#user_session_login').focus();
    });
  </script>
  <script src="https://rpxnow.com/openid/v2/widget"
          type="text/javascript"></script>
  <script type="text/javascript">
    RPXNOW.overlay = true;
    RPXNOW.language_preference = 'en';
  </script>
<% end %>
