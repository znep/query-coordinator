/*** GENERAL ***/

a {
    color: #<%= th.link_fg %>;
}

<% 5.times do |level| %>
h<%= level + 1 %>  {
    color: #<%= th.header_fg[level] || '333333' %>;
}
<% end %>

.bodyInterior {
    border-top-color: #<%= th.top_border_bg %>;
}

/*** OUTER CHROME ***/
#mainNav li,
#mainNav li a span,
body.home #mainNav li.home .subNav li,
body.home #mainNav li.home .subNav li a span
{
    background-image: <%= main_button_inactive_bg %>;
}

<% if !th.home_tab_width.nil? %>
/*** Makes the outer chrome tabs wider  ***/
body #header #mainNav
{
  width: <%= th.home_tab_width * 3 + 0.3 %>em;
}

body #header #mainNav li
{
    width: <%= th.home_tab_width %>em;
}
<% end %>

<% if !th.logo_vertical_offset.nil? %>
<%= th.body_class %> #mainLogo
{
  top: <%= th.logo_vertical_offset %>;
}
<% end %>

body.home #mainNav li.home,
body.home #mainNav li.home a span,
body.discover #mainNav li.discover a span,
body.community #mainNav li.community a span,
body.discover #mainNav li.discover,
#mainNav ul.subNav li:hover,
#mainNav ul.subNav li:hover a span,
body.home #mainNav li.home .subNav li:hover,
body.home #mainNav li.home .subNav li:hover a span

{
    background-image: <%= main_button_active_bg %>;
}

#mainLogo a
{
    background-image: <%= th.image :logo %>;
}

/*** DIALOG BOXEN ***/
.dialogBox .header
{
    background-color: #<%= th.highlight_color %>;
}

.dialogBox .header h1 
{
    background-image: <%= th.image :dialog_logo %>;
}

/*** CAROUSEL ***/

.pageBlockHeaderCarousel.carouselWrapper,
.pageBlockHeaderCarousel .carouselOuter,
.pageBlockHeaderCarousel .carouselInner
{
    background-image: <%= carousel_bg %>;
}

/*** META TABS ***/
.infoContentOuter.listContainer.expanded .infoContentInner,
.infoContentOuter.listContainer .infoContent
{
    background-image: <%= expanded_list_bg %>;
}

.infoContentOuter.listContainer .infoContent dt.hover
{
    background-image: <%= background_summary_list_title %>;
}

.infoContentOuter
{
    border-color: #<%= th.highlight_color %>;
}

.metadataPane .summaryTabs 
{
    border-bottom-color: #<%= th.highlight_color %>;
}

.metadataPane .summaryTabs li 
{
    border-color: #<%= th.highlight_color %>;
}

.singleInfoComments li.comment.ownerComment .commentBlock .cornerOuter { 
    border-color: #<%= th.highlight_color %>;
}

.infoContentOuter.listContainer .infoContent
{
    background-image: <%= bottom_left_dark_bg %>;
}
.infoContentOuter .infoContentInner
{
    background-image: <%= summary_bottom_left_bg %>;
}

.infoContentOuter .infoContentWrapper
{
    background-image: <%= summary_bottom_right_bg %>;
}

.metadataPane .summaryTabs li .tabOuter,
.metadataPane .summaryTabs li .tabInner
{
    background-image: <%= summary_tab_bg %>;
}

.metadataPane .summaryTabs li.active .tabOuter,
.metadataPane .summaryTabs li.active .tabInner
{
    background-image: <%= summary_tab_active_bg %>;
}

/*** PUBLISH TOOL ***/
<%= th.body_class %> #publishContent .publishHeader .publishCodeWrapper
{
    background-color: #<%= th.highlight_color %>;
}

#publishOptionsPane .infoContentRightBg
{
    background: <%= background_expanded_list %> -10px 0 repeat-y;
}

/*** DATASET BUTTON BAR ***/
#lensBody .headerBar .staticLink:hover,
a.dropdownLink:hover .midWrapper
{
    background: <%= button_hover_slice_bg %> repeat-x;
}

a.dropdownLink:hover
{
    background-image: <%= button_hover_endcap_bg %>;
}

a.dropdownLink:hover .outerWrapper
{
    background-image: <%= button_hover_endcap_bg %>;
}

a.dropdownLink.clicked
{
    background-image: <%= button_activated_endcap_bg %>;
}

a.dropdownLink.clicked .outerWrapper
{
    background-image: <%= button_activated_endcap_bg %>;
}

a.dropdownLink.clicked .midWrapper
{
    background-image: <%= button_activated_slice_bg %>;
}

/*** PROFILE PAGE ***/
#profile #welcome .welcomeTL
{
    background: <%= welcome_top %>  no-repeat;
    padding-left: 10px;
    zoom: 1;
}
#profile #welcome .welcomeTR
{
    background: <%= welcome_top %>  no-repeat;
    background-position: right -68px;
    padding-right: 10px;
    zoom: 1;
}
#profile #welcome .welcome-titlebar
{
    background: <%= welcome_top %>  repeat-x;
    background-position: right -34px;
    position: relative;
    zoom: 1;
}
#profile #welcome .welcome-titlebar h1
{
    color: white;
    font-size: 1.4em;
    font-weight: bold;
    padding: 0.5em 1em;
    margin-bottom: 0;
}
#profile #welcome .welcome-titlebar span.close
{
    position: absolute;
    right: 0px;
    top: 9px;
    background: url(/stylesheets/images/content/dialog_close_button.png) no-repeat;
    line-height: 100px;
    overflow: hidden;
    width: 16px;
    height: 16px;
}
#profile #welcome .welcomeBL
{
    border-top: 1px solid #9ba5a1;
    background: <%= welcome_bottom %>  no-repeat;
    height: 78px;
    padding-left: 10px;
}
#profile #welcome .welcomeBR
{
    background: <%= welcome_bottom %> no-repeat;
    height: 78px;
    background-position: right -156px;
    padding-right: 10px;
}
#profile #welcome .welcome-content
{
    background: <%= welcome_bottom %> repeat-x;
    height: 78px;
    background-position: right -78px;
}

