<% content_for :head do %>
  <title>Example Usage: DatePicker</title>
  <meta http-equiv="content-type" content="text/html; charset=UTF8">
  <%= rendered_stylesheet_tag 'component_example_pages' %>
<% end %>

<section class="styleguide-section" id="socrata-date-picker">
  <p>
    <a class="btn btn-default" href='/internal/demos/components'><span class="socrata-icon-arrow-left"></span> Components</a>
  </p>
  <h2 class="styleguide-header">Date Picker</h2>
  <div class="styleguide-example">
    <div id="socrata-date-picker-container"></div>
  </div>
  <div class="styleguide-code-example" id="styleguide-code-example-1"></div>
</section>

<% content_for :scripts do %>
  <%= render_demos_javascript_environment %>
  <%= include_webpack_bundle 'component_example_pages/main.js' %>

  <script type="text/javascript" id="example-1">
    $(() => {
      const props = {
        date: '2001-01-01',
        onChangeDate: (newValue) => {
          console.log('onChangeDate:', newValue);
          props.date = newValue;
          render();
        }
      };

      function render() {
        ReactDOM.render(
          React.createElement(components.DatePicker, props),
          document.getElementById('socrata-date-picker-container')
        );
      }

      render();
    });
  </script>
<% end %>
