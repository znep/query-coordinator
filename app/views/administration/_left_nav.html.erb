<div class="leftNavBox adminNavBox">
  <ul class="navigationList adminNav">
    <%- if module_available? :advanced_metrics -%>
      <li class="analytics">
        <%= link_to_unless_current \
            raw('<span class="icon"></span>Site Analytics'),
            {:action => 'analytics'} %>
      </li>
    <%- end -%>
    <li class="users">
      <%= link_to_unless_current \
          raw('<span class="icon"></span>Users'),
          {:action => 'users'} %>
    </li>
    <%- if module_available? :federations -%>
      <li class="datasets">
        <%= link_to_unless_current \
            raw('<span class="icon"></span>Federation'),
            {:action => 'federations'} %>
      </li>
    <%- end -%>
    <%- if module_available? :publisher_comment_moderation -%>
      <li class="comments">
        <%= link_to_unless_current \
            raw('<span class="icon"></span>Moderation'),
            {:action => 'moderation'} %>
      </li>
    <%- end -%>
    <%- if module_available? :sdp_customizer -%>
      <li class="appearance">
        <%= link_to_unless_current \
            raw('<span class="icon"></span>SDP Templates'),
            {:action => 'sdp_templates'} %>
      </li>
    <%- end -%>
    <%- if current_user && current_user.is_admin? -%>
      <li class="internal">
        <%= link_to_unless_current \
            raw('<span class="icon"></span>Internal'),
            {:controller => 'internal', :action => 'index'} %>
      </li>
    <%- end -%>
  </ul>
</div>
