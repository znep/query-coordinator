<% content_for :head do %>
  <%= rendered_stylesheet_tag 'administration-screen' %>
  <%= rendered_stylesheet_tag 'administration-connectors' %>
  <title><%= t('screens.admin.connector.title') %> | <%= get_site_title %></title>
<% end %>

<% admin_breadcrumb('screens.admin.connector.title') %>

<%= render '/administration/left_nav' %>

<%= include_webpack_bundle 'admin/admin-new-connector.js' %>

<div id="connector-content" class="contentBox <%= admin_page_with_left_nav_class %>">
  <div class="adminHeader connectors">
    <h1><%= t('screens.admin.connector.add_connector') %></h1>
    <div class="connector-list-go-back">
      <%= link_to(t('screens.admin.connector.back_to_connector_list'),
                  :controller => '/administration/connector',
                  :action => 'connectors') %>
    </div>
  </div>
  <div class="addSourceWrapper">
    <%= form_tag({:action => 'create_connector'}, :method => :post, :multipart => true, :class => 'commonForm add-connector') do -%>
      <%= render :partial => 'new_connector_form' %>
    <%- end -%>
  </div>
</div>

<%= render_admin_qualtrics %>
