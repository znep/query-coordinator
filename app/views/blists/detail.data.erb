<%- if (@item_count) -%>
  <%= render(:partial => "blists/info_for_list.html", :locals => { :item_count => @item_count }) %>
<%- elsif (@view) -%>
  <%= render(:partial => "blists/info_for_single.html", :locals => { :view => @view }) %>
