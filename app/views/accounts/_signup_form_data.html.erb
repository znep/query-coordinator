<div class="fieldContent clearfix">
  <%= display_standard_flashes %>
  <fieldset>
    <%= f.hidden_field :inviteToken %>
    <%= f.hidden_field :openIdIdentifierId %>
    <%= f.hidden_field :firstName %>
    <%= f.hidden_field :lastName %>

    <p class="clearfix">
      <%= f.label :login, 'Username', :class => 'required' %>
      <%= f.text_field :login, :maxlength => 40 %>
      <% if !CurrentDomain.strings.login_disclaimer.nil? %>
        <span class="helpie"
          title="<%= CurrentDomain.strings.login_disclaimer %>">?</span>
      <% end %>
    </p>
    <% unless local_assigns[:hide_password] %>
      <p class="clearfix">
        <%= f.label :password, 'Password', :class => 'required' %>
        <%= f.password_field :password %>
      </p>
      <p class="clearfix">
        <%= label_tag :passwordConfirm, 'Confirm Password', :class => 'required' %>
        <%= f.password_field :passwordConfirm %>
      </p>
    <% end %>
    <p class="clearfix">
      <%= f.label :email, 'Email Address', :class => 'required' %>
      <%= f.text_field :email %>
    </p>
    <p class="clearfix">
      <%= label_tag :emailConfirm, 'Confirm Email', :class => 'required' %>
      <%= f.text_field :emailConfirm %>
    </p>
    <p class="clearfix">
      <span><%= check_box_tag 'signup[accept_terms]', "1", false, :class => 'required' %>
      I agree to the <%= raw CurrentDomain.theme.urls.signup.map{|link| link_from_theme(link)}.to_sentence(
      :words_connector => ', ', :two_words_connector => ' and ', :last_word_connector => ', and ') %></span>
      <label class="error" for="signup[accept_terms]" generated="true"></label>
    </p>
  </fieldset>
</div>

<div class="submitLine clearfix">
  <div class="required">Required Field</div>
  <ul class="actionButtons clearfix">
    <li class="signup_loadingIndicatorContainer" style="display:none">
      <span class="signup_loadingIndicator"></span>
    </li>
    <li>
      <a id="signup_submit" class="arrowButton" href="javascript:void(0)"><span>Sign Up</span></a>
    </li>
    <%- if local_assigns[:is_modal] -%>
      <li>
        <a href='#close_signup' class='close jqmClose'><span>Cancel</span></a>
      </li>
    <%- end -%>
  </ul>
</div>
