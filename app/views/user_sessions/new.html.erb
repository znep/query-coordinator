<% content_for :head do %>
  <%= stylesheet_link_tag "login-screen" %>
  <title><%= t(:page_title) %></title>
<% end %>

<div class='dialogBox loginBox'>
  <div class='header'>
    <h1>blist</h1>
  </div>

  <div class='mainContent'>
    <div class='title clearfix'><h2>Sign In</h2> <%= link_to("Sign Up", new_account_url) %></div>

    <%= display_standard_flashes %>

    <% form_for @user_session do |f| %>
    <%= f.error_messages %>
    <p>
    <%= f.label :login, 'Username' %>
    <%= f.text_field :login %>
    </p>
    <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </p>
    <p class='rememberMe'>
    <input type='checkbox' id='rememberMe' />
    <label for='rememberMe'>Remember me</label>
    </p>
    <div class='footer clearfix'>
      <%= link_to "Forgot your password / username?", forgot_password_url %>
      <input type='image' name='submit'
        src='<%= image_path("button_signin.png") %>' />
    </div>
    <% end %>
  </div>
</div>

<% content_for :js_footer do %>
  <%= render(:partial => "shared/common_js") %>
  <script type="text/javascript">
    $(function ()
    {
        $('#user_session_login').focus();
    });
  </script>
<% end %>
