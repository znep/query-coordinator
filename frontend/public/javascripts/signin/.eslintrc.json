{
  "extends": "../../../node_modules/eslint-base/.eslintrc-airbnb.json",
  "env": {
    "es6": true
  },
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/prefer-es6-class": "off",
    "import/default": "off"
  },
  "settings": {
    "import/ignore": [
      "\\.(scss|css)$"
    ]
  }
}
