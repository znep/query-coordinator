<%# locals: view, page_single  %>
<%- is_owner = current_user && view.owner.id == current_user.id -%>

<div class="header">
  <ul class="summaryTabs clearfix">
  <%- is_first_tab = true -%>
  <%- theme[:meta].reject{ |name, properties| !properties[:show] }.
                   sort{ |a, b| a.last[:order] <=> b.last[:order] }.each do |name, properties| -%>
    <li id="tab<%= name.to_s.titleize %>" class="scrollable <%= name %><%= is_first_tab ? ' active' : '' %>">
      <div class="tabOuter"><div class="tabInner">
        <a href="#expand" class="expander" title="more info">more info</a>
        <a href="#<%= name %>"><%= properties[:display_name] %></a>
      </div></div>
    </li>
  <%- is_first_tab = false -%>
  <%- end -%>
  <li class="scrollArrow prev"><a href="#scroll_left">Scroll left</a></li>
  <li class="scrollArrow next"><a href="#scroll_right">Scroll right</a></li>
  </ul>
</div>


<%# *** START: COMMENTS *** %>
<%- if theme[:meta][:comments][:show] -%>
  <div class="infoContentOuter singleInfoComments listContainer">
    <div class="infoContentHeader clearfix">
      <%= render(:partial => "blists/info_comments_header", 
                  :locals => {:view => view, :allow_commenting => false, :in_widget => true}) %>
    </div>
    <div class="infoContentInner"><div class="infoContentWrapper">
      <div class="infoContent"></div>
    </div></div>
  </div>
<%- end -%>
<%# *** END: COMMENTS *** %>

<%# *** START: FILTERED *** %>
<%- if theme[:meta][:filtered][:show] -%>
  <div class="infoContentOuter singleInfoFiltered">
    <div class="infoContentHeader clearfix">
      <%= render(:partial => "blists/info_filtered_header", 
                  :locals => {:view => view , :in_widget => true}) %>
    </div>
    <div class="infoContentInner"><div class="infoContentWrapper">
      <div class="infoContent"></div>
    </div></div>
  </div>
<%- end -%>
<%# *** END: FILTERED *** %>

<%# *** START: PUBLISHING *** %>
<%- if theme[:meta][:publishing][:show] -%>
  <div class="infoContentOuter singleInfoPublishing">
    <div class="infoContentHeader clearfix">
      <h2 class="panelHeader">Publishing</h2>
    </div>
    <div class="infoContentInner"><div class="infoContentWrapper">
      <div class="infoContent"></div>
    </div></div>
  </div>
<%- end -%>
<%# *** END: PUBLISHING *** %>

<%# *** START: ACTIVITY *** %>
<%- if theme[:meta][:activity][:show] -%>
<div class="infoContentOuter singleInfoActivity">
  <div class="infoContentHeader clearfix">
    <%= render(:partial => "blists/info_activity_header", 
                :locals => {:view => view, :in_widget => true }) %>
  </div>
  <div class="infoContentInner"><div class="infoContentWrapper">
    <div class="infoContent"></div>
  </div></div>
</div>
<%- end -%>
<%# *** END: ACTIVITY *** %>

<%# *** START: SUMMARY *** %>
<%- if theme[:meta][:summary][:show] -%>
  <div class="infoContentOuter singleInfoSummary listContainer">
    <div class="infoContentHeader clearfix">
      <%= render(:partial => "blists/info_summary_header",
                  :locals => {:view => view, :page_single => false, 
                              :allow_edit => false, :in_widget => true }) %>
    </div>
    <div class="infoContentInner"><div class="infoContentWrapper">
      <div class="infoContent"></div>
    </div></div>
  </div>
<%- end -%>
<%# *** END: SUMMARY *** %>