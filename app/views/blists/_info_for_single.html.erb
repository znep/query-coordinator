<%# locals: lens  %>

<div class="header">
  <ul class="summaryTabs clearfix">
    <li id="tabSummary" class="summary active">
      <div class="tabInner">
        <a href="#expand" class="expander">expand</a>
        <a href="#summary">Summary</a>
      </div>
    </li>
    <li id="tabFiltered">
      <div class="tabInner">
        <a href="#expand" class="expander">expand</a>
        <a href="#filtered_views">Filtered Views</a>
      </div>
    </li>
    <li id="tabSharing">
      <div class="tabInner">
        <a href="#expand" class="expander">expand</a>
        <a href="#sharing_permissions">Sharing</a>
      </div>
    </li>
    <li id="tabPublishing">
      <div class="tabInner">
        <a href="#publishing">Publishing</a>
      </div>
    </li>
    <li id="tabActivity" class="last">
      <div class="tabInner">
        <a href="#expand" class="expander">expand</a>
        <a href="#activity">Activity</a>
      </div>
    </li>
  </ul>
</div>

<%# *** START: SUMMARY *** %>
<div class="infoContentOuter singleInfoSummary listContainer active">
  <div class="infoContentHeader clearfix">
    <h2 class="panelHeader <%= get_permissions_icon_class_for_lens(lens) %>">
      <%= h(lens.name) %>
    </h2>
    <ul class="headerActions actionButtons">
      <li><a href="<%= blist_url(lens.id) %>" class="arrowButton">Open</a></li>
      <li><a href="#duplicate">Duplicate</a></li>
      <li><a href="#share">Share</a></li>
    </ul>
  </div>
  <div class="infoContentInner">
    <div class="infoContent">

      <dl class="summaryList">
        <dt>
          Description
          <a href="#help" class="help"><span>help</span></a>
        </dt>
        <dd>
          <div class="itemContent">
            <span><%= h(lens.description) %></span>
          </div>
          <div class="itemActions">
            <a href="#unselect" class="action"><span>Edit</span></a>
          </div>
        </dd>
      </dl>

      <%- if (lens.tags.length > 0) -%>
      <dl class="summaryList">
        <dt>
          Tags
          <a href="#help" class="help"><span>help</span></a>
        </dt>
        <dd>
          <div class="itemContent">
            <span><%= h(lens.tag_display_string) %></span>
          </div>
          <div class="itemActions">
            <a href="#unselect" class="action"><span>Edit</span></a>
          </div>
        </dd>
      </dl>
      <%- end -%>

      <dl class="summaryList">
        <dt>
          Category
          <a href="#help" class="help"><span>help</span></a>
        </dt>
        <dd class="itemBlist">
          <div class="itemContent">
            <span><%= h(lens.category) %></span>
          </div>
          <div class="itemActions">
            <a href="#unselect" class="action"><span>Edit</span></a>
          </div>
        </dd>
      </dl>

      <dl class="summaryList">
        <dt>
          Owner
          <a href="#help" class="help"><span>help</span></a>
        </dt>
        <dd>
          <div class="itemContent">
            <span><%= h(lens.owner.displayName) %></span>
          </div>
        </dd>
      </dl>

      <dl class="summaryList">
        <dt>
          Created On
          <a href="#help" class="help"><span>help</span></a>
        </dt>
        <dd>
          <div class="itemContent">
            <span><%= blist_date(lens.createdAt) %></span>
          </div>
        </dd>
      </dl>

      <dl class="summaryList">
        <dt>
          Last Update
          <a href="#help" class="help"><span>help</span></a>
        </dt>
        <dd>
          <div class="itemContent">
            <span><%= h(lens.last_updated_user.displayName) %>:
              <%= blist_date(lens.rowsUpdatedAt) || blist_date(lens.createdAt) %>
            </span>
          </div>
          <div class="itemActions">
            <a href="#tabActivity" class="action tabLink">
              <span>View Activity</span></a>
          </div>
        </dd>
      </dl>

      <dl class="summaryList">
        <dt>
          Filtered Views
          <a href="#help" class="help"><span>help</span></a>
        </dt>
        <dd>
          <div class="itemContent">
            <span><%= pluralize(lens.filters.length, "filtered view") %></span>
          </div>
          <div class="itemActions">
            <a href="#tabFiltered" class="action tabLink"><span>Details</span></a>
          </div>
        </dd>
      </dl>

      <dl class="summaryList">
        <dt>
          Community Activity
          <a href="#help" class="help"><span>help</span></a>
        </dt>
        <dd>
          <div class="itemContent">
            <ul>
              <li><%= pluralize(lens.viewCount, " view") %></li>
              <li>[11 copies]</li>
            </ul>
          </div>
          <div class="itemActions">
            <a href="#tabActivity" class="action tabLink">
              <span>View Activity</span>
            </a>
          </div>
        </dd>
      </dl>

      <dl class="summaryList">
        <dt>
          Link
          <a href="#help" class="help"><span>help</span></a>
        </dt>
        <dd>
          <div class="itemContent">
            <span>[http://app.blist.com/?variant=debug#/blist/kmerritt/]<%= lens.urlName %></span>
          </div>
          <div class="itemActions">
            <a href="#publish" class="action"><span>Publish</span></a>
          </div>
        </dd>
      </dl>

      <dl class="summaryList">
        <dt>
          Permissions
          <a href="#help" class="help"><span>help</span></a>
        </dt>
        <dd>
          <div class="itemContent">
            <span><%= lens.is_public? ? 'Public' : 'Private' %></span>
          </div>
          <div class="itemActions">
            <a href="#unselect" class="action"><span>Edit</span></a>
          </div>
        </dd>
      </dl>

      <dl class="summaryList">
        <dt>
          Sharing
          <a href="#help" class="help"><span>help</span></a>
        </dt>
        <dd>
          <div class="itemContent">
            <ul>
              <li>
                <%= pluralize(lens.contributor_users.length, 'Contributor') %>
              </li>
              <li>
                <%= pluralize(lens.viewer_users.length, 'Viewer') %>
              </li>
              <%# Not supported
              <li>[3 Requests]</li>
              %>
            </ul>
          </div>
          <ul class="itemActions">
            <li><a href="#share" class="action"><span>Share</span></a></li>
            <%# Not supported
            <li><a href="#view_requests" class="action"><span>View Requests</span></a></li>
            %>
          </ul>
        </dd>
      </dl>

    </div> <!-- /.infoContent -->
  </div> <!-- /.infoContentInner -->
</div>
<%# *** END: SUMMARY *** %>

<%# *** START: FILTERED *** %>
<div class="infoContentOuter singleInfoFiltered">
  <div class="infoContentHeader clearfix">
    <h2 class="panelHeader">
      <%= pluralize(lens.filters.length, "Filtered View") %>
    </h2>
    <ul class="headerActions actionButtons">
      <li><a href="#open" class="arrowButton">Create</a></li>
    </ul>
  </div>
  <div class="infoContentInner">
    <div class="infoContent">
      <div class="selectableListContainer">
        <table class="selectableList" cellspacing="0">
          <thead>
            <tr>
              <th class="handle first"><div></div></th>
              <th class="favorite" title="Favorite?"><div>Favorite?</div></th>
              <th class="type" title="Type"><div>Type</div></th>
              <th class="name"><div>Name</div></th>
              <th class="description"><div>Description</div></th>
              <th class="viewed"><div>Viewed</div></th>
              <th class="actionContainer last"></th>
            </tr>
          </thead>
          <tbody>
            <%- lens.filters.each do |filter| -%>
              <tr class="item">
                <td class="handle"><div></div></td>
                <td class="favorite <%= filter.flag?('favorite') %>"><div>
                    <%= filter.flag?('favorite') ? "*" : "" %>
                </div></td>
                <td class="type <%=
                  get_share_direction_icon_class_for_lens(filter) %>">
                  <div><%= get_type_string_for_lens(filter) %></div>
                </td>
                <td class="name"><div><%= h(filter.name) %></div></td>
                <td class="description"><div><%= h(filter.description) %></div></td>
                <td class="viewed"><div><%= blist_date(lens.lastOpenedDate) %>
                </div></td>
                <td class="actionContainer"><div><a
                      href="<%= blist_url(filter.id) %>" class="action"
                      title="<%= h(filter.name) %>"><span>View</span></a>
                </div></td>
              </tr>
            <%- end -%>
          </tbody>
        </table>
      </div>


    </div>
  </div>
</div>
<%# *** END: FILTERED *** %>

<%# *** START: SHARING *** %>
<div class="infoContentOuter singleInfoSharing">
  <div class="infoContentHeader clearfix">
    <%- shares = lens.shares -%>
    <h2 class="panelHeader first"><%= pluralize(shares.length, 'Share') %></h2>
    <h2 class="panelHeader <%= get_permissions_icon_class_for_lens(lens) %>">
      <%= lens.is_public? ? "Public" : "Private" %>
    </h2>
    <ul class="headerActions actionButtons">
      <li><a href="#open" class="arrowButton" title="Share">Share</a></li>
    </ul>
  </div>
  <div class="infoContentInner">
    <div class="infoContent">
      <div class="sharingSummary">
        <p class="<%= lens.is_public? ? "public" : (lens.is_shared? ?
          "privateShared" : "private") %>">
        This <%= lens.is_blist? ? "blist" : "filter" %> is
        <em><%= lens.is_public? ? "Public" : "Private" %></em>
        <%= lens.is_shared? ? ' and shared with the following ' +
        (shares.length == 1 ? 'contact' : 'contact'.pluralize) + ':' : '' %>
        </p>
      </div>

      <div class="selectableListContainer">
        <table class="selectableList" cellspacing="0">
          <thead>
            <tr>
              <th class="handle first"><div></div></th>
              <th class="contact" title="Contact/Group">
                <div>Contact / Group</div>
              </th>
              <th class="role" title="Role"><div>Role</div></th>
              <%# Not supported
              <th class="others"><div>Can Share w/ Others</div></th>
              <th class="opened"><div>Last Opened</div></th>
              %>
              <th class="actionContainer last"></th>
            </tr>
          </thead>
          <tbody>
            <%- lens.shares.sort {|a,b|
              a.type <=> b.type ||
              a.member_name.downcase <=> b.member_name.downcase}.each do |s| -%>
            <tr class="item">
              <td class="handle"><div></div></td>
              <td class="contact"><div><%= h(s.member_name) %></div></td>
              <td class="role"><div><%= s.type %></div></td>
              <%# Not supported
              <td class="others"><div>Yes</div></td>
              <td class="opened"><div>01/09/2009</div></td>
              %>
              <td class="actionContainer"><div>
                <a href="#view" class="action"><span>View Activity</span></a>
              </div></td>
            </tr>
            <%- end -%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%# *** END: FILTERED *** %>

