<% cache ["carousel-public-item", data_carousel_item.id],
  :expires_in => 15.minutes do %>
  <%- view = data_carousel_item -%>

  <li class="carouselItem"><div class="carouselItemInner">
    <div class="carouselItemTR"><div class="carouselItemBL">
        <div class="carouselItemBR">
          <div class="carouselItemLeft"><div class="carouselItemRight">

              <div class="carouselContainer">
                <div class="itemTitle clearfix">
                  <h3><%= link_to(view.name, view.href,
                    :title => view.name) %></h3>
                  <%= image_tag(view.iconUrl.to_s, :size => "55x55",
                    :alt => "placeholder") if view.iconUrl %>
                </div>
                <div class="itemMetaData">
                  <ul class="metaList">
                    <li class="ratingContainer">
                      <%= get_blist_rating_html(view) %>
                    </li>
                    <li>Visited <%= pluralize(view.viewCount, "time") %></li>
                    <li><%= pluralize(view.numberOfComments, "Comment") %></li>
                  </ul>
                </div>
              </div>

          </div></div>
    </div></div></div>
  </div></li>
<% end %>
