desc 'Run lint and  tests'
task default: %w[lint test]

desc 'Ensures dependencies are installed'
task :deps do
  npm 'run check-dependencies' do |ok, res|
    unless ok
      npm 'install'
    end
  end
end

namespace 'karma' do
  task :runonce do
    npm 'test'
  end
  task :watch do
    npm 'run watch'
  end
end

desc 'Run all JavaScript tests (check prereqs)'
task karma: %w[deps karma:runonce]

desc 'Run all tests and re-run on file change'
task watch: %w[deps karma:watch]

desc 'Run linter'
task lint: :deps do
  npm 'run lint'
end

desc 'Run all tests'
task test: :karma

def npm(command)
  command = "cd karma_config && npm #{command}"
  if block_given?
    sh(command) { |ok, res| yield(ok, res) }
  else
    sh(command)
  end
end

