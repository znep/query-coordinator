<%- we_support_download_count_yet = false -%>
<div class="downloadsTable">
  <div class="gridListWrapper">
    <table class="gridList downloadsList" cellspacing="0">
      <colgroup>
        <col class="type" />
        <%- if we_support_download_count_yet -%>
          <col class="downloads" />
        <%- end -%>
      </colgroup>
      <thead>
        <tr>
          <th class="type"><div>Type</div><span class="icon"></span></th>
          <%- if we_support_download_count_yet -%>
            <th class="downloads"><div>Downloads</div><span class="icon"></span></th>
          <%- end -%>
        </tr>
      </thead>
      <tbody>
        <tr class="item">
          <td class="type"><div class="cellInner"><a rel="external" class="noInterstitial"></a></div></td>
          <%- if we_support_download_count_yet -%>
            <td class="downloads"><div class="cellInner"></div></td>
          <%- end -%>
        </tr>
      </tbody>
    </table>
  </div>
</div>