                  </div>
                </dd>
              </dl>
              <dl class="summaryList">
                <dt>Dataset Title</dt>
                <dd>
                  <div class="itemContent">
                    <span class="textContent">
                      <%= radio_button_tag("customization[frame][show_title]", "true",
                          @customization[:frame][:show_title]) %>
                      <%= label_tag("customization_frame_show_title_true", "Show") %>
                      <%= radio_button_tag("customization[frame][show_title]", "false",
                          !(@customization[:frame][:show_title])) %>
                      <%= label_tag("customization_frame_show_title_false", "Don't Show") %>
                    </span>
                  </div>
                </dd>
              </dl>
              <dl class="summaryList">
                <dt>Powered By</dt>
                <dd>
                  <div class="itemContent">
                    <span class="textContent">
                      <%= radio_button_tag("customization[publish][show_powered_by]", "true",
