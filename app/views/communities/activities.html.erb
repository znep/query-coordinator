<% content_for :head do %>
  <% bundle :name => "community_css", :bypass => (ENV["RAILS_ENV"] != 'production') do %>
    <%= stylesheet_link_tag "community-activities-screen",
    :cache => "cache/community_activites_all" %>
  <% end %>
  <title><%= t(:page_title) %></title>
<% end %>


<div id="activities" class="oneColumnContainer">
  <div class="fullPageContentContainer">
    <div class="fullPageOuterContent">
      <div class="fullPageContent">
      
        <div class="activitiesHeader clearfix">
          <h1>The <%= t(:blist_company) %> Community Feed</h1>
          <p class="communityBackLink">
            <%= link_to("Back to the #{t(:blist_company)} community", community_path) %>
          </p>
        </div>
      
        <div class="activitiesBody clearfix">
          <div class="activityColumn"><div class="activityColumnInner">
            <h2>Community Activity</h2>
            <ul class="activityList">
              <%- @community_activity.each do |activity| -%>
                <li>
                  <%= get_html_for_activity(activity, "full") %>
                </li>
              <%- end -%>
            </ul>
          </div></div>
          <%- if @contacts_activity && @contacts_activity.length > 0 -%>
          <div class="activityColumn last"><div class="activityColumnInner">
            <h2>Your Friends Activity</h2>
            <ul class="activityList">
              <%- @contacts_activity.each do |activity| -%>
                <li>
                  <%= get_html_for_activity(activity, "full") %>
                </li>
              <%- end -%>
            </ul>
          </div></div>
          <%- end -%>
        </div>
      
      </div>
    </div>
  </div>
</div>

<% content_for :js_footer do %>
  <%= render(:partial => "shared/common_js") %>
  <% bundle :name => "community_activities", :bypass => (ENV["RAILS_ENV"] != 'production') do %>
    <%= javascript_include_tag "screens/community-activities-screen", :cache => "cache/community_activites_all" %>
  <% end %>
<% end %>
