<%- prefix = 'screens.admin.georegions' %>
<%- no_js = params[:no_js].present? -%>

<% content_for :head do %>
  <%= rendered_stylesheet_tag 'administration-screen' %>
  <%= rendered_stylesheet_tag 'administration-georegions' %>
  <title><%= t("#{prefix}.title") %> | <%= controller.current_domain.strings.site_title %></title>
<% end %>

<% content_for :skip_links do %>
  <%= link_to t('core.no_js'), '?no_js=true' %>
<% end %>

<%= render :partial => 'left_nav' %>

<div class="contentBox withLeftNavigation georegionsScreen">
  <div class="adminHeader floating georegions">
    <span class="icon"></span>
    <h1><%= t("#{prefix}.page_title") %></h1>
    <h4><%= t("#{prefix}.page_subtitle", :enabled_count => @georegions[:counts][:enabled], :available_count => @georegions[:counts][:available]) %></h4>
  </div>
</div>


<div class="contentBox withLeftNavigation metadataScreen">
  <div class="categories">
    <div class="clearfix">
      <h1 class="georegions-title-custom"><%= t("#{prefix}.custom_georegions") %></h1>
      <div class="georegions-controls-custom">
        <%= form_button(
          { :action => 'add_georegion' },
          t("#{prefix}.add_new"),
          { :method => :post },
          { :class => 'button' }) %>
      </div>
    </div>

    <%= render :partial => 'georegions_table', :locals => { :prefix => prefix, :georegions => @georegions[:custom], :allow_actions => true } %>
  </div>
</div>

<div class="contentBox withLeftNavigation metadataScreen">
  <div class="categories">
    <div>
      <h1><%= t("#{prefix}.default_georegions") %></h1>
    </div>

    <%= render :partial => 'georegions_table', :locals => { :prefix => prefix, :georegions => @georegions[:default], :allow_actions => false } %>
  </div>
</div>

<% content_for :js_footer do %>
  <%- unless params[:no_js] == 'true' -%>
    <%= include_javascripts 'admin-georegions' %>
  <%- end -%>
<% end %>
<%= render_translations @georegions[:translations] %>
