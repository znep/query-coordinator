      <%= partial "examples/lists" %>
    </div><!-- /.example -->
  </section>

  <section class="styleguide-section">
    <div class="meta">
      <h2 class="styleguide-header">Colors</h2>
      <p class="small">
        colors colors colors
      </p>
    </div>
    <div class="example">
      <%= partial "examples/colors" %>
    </div><!-- /.example -->
  </section>

  <section class="styleguide-section">
    <div class="meta">
      <h2 class="styleguide-header">Buttons</h2>
      <p class="small">Yay, buttonz!</p>
    </div>
    <div class="example">
      <%= partial "examples/button_options" %>
    </div><!-- /.example -->
  </section>

  <section class="styleguide-section">
    <div class="meta">
      <h2 class="styleguide-header">Form Controls</h2>
      <p class="small">dropdowns and text fields and stuff</p>
    </div>
