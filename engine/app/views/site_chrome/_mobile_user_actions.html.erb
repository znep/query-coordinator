<div class="mobile-user-actions noselect">
  <% if logged_in? %>
    <%= link_to(t('header.view_profile'), massage_url('/profile'), :class => 'profile-link site-chrome-mobile-btn inverse-btn') %>
    <%- if current_user_can_see_admin_link? %>
      <%= link_to(t('header.administration'), massage_url('/admin'), :class => 'admin-link site-chrome-mobile-btn inverse-btn') %>
    <%- end %>
    <%= link_to(t('header.sign_out'), massage_url('/logout'), :class => 'logout-link site-chrome-mobile-btn') %>
  <% else %>
    <%= link_to(t('header.sign_in'), massage_url('/login'), :class => 'sign-in-toggle site-chrome-mobile-btn') %>
  <% end %>
</div>
