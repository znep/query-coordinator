<% content_for :head do %>
  <%= rendered_stylesheet_tag 'profile-edit' %>
  <title>Edit Profile Details | <%= get_site_title %></title>
<% end %>

<% content_for :skip_links do %>
  <%- unless params[:no_js].present? -%>
    <%= link_to t('core.no_js'), '?no_js=true' %>
  <%- end -%>
<% end %>

<%= render :partial => 'edit_nav' %>

<div class="contentBox withLeftNavigation editProfile editBasicInfo">
  <% link_to profile_path(current_user), :class => 'button backButton leftArrowNoHover' do %>
    <span class="icon"></span>
    Back to My Profile
  <% end %>
  <div class="content">
    <%= form_tag(profile_path(current_user), :id => "editProfileForm",
                :multipart => true, :class => 'commonForm', :method => :put) do %>
      <%= render :partial => 'edit_form' %>
      <%- unless params[:no_js].present? -%>
        <%= render :partial => 'edit_image_form' %>
      <%- end -%>
    <%- end -%>
    <%- unless params[:no_js].present? -%>
      <%= render :partial => 'edit_account_form' %>
    <%- end -%>
  </div>
</div>

<%= render_profile_userzoom %>

<% content_for :js_footer do %>
  <%- unless params[:no_js].present? -%>
    <%= include_webpack_bundle 'open-data/screen-profile-edit.js' %>
  <%- end -%>
<% end %>
